---
// src/pages/htb/index.astro
// Fetches ALL machines from GitHub and renders the archive grid dynamically.
import htbLogo from '../../assets/images/htb_logo.png';
import GlobalEffects from '../../components/GlobalEffects.astro';
import { Image } from 'astro:assets';

import machinesData from '../../data/machines.json';

const machines = machinesData;

const difficultyColor: Record<string, string> = {
    Easy:   '#9acd32',
    Medium: '#f39c12',
    Hard:   '#e74c3c',
    Insane: '#ffffff',
};
---

<html lang="pt">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
        <meta name="description" content="All Hack The Box machines pwned by Diogo Couto, with writeups, difficulty and thought process." />
		<title>HTB Archive | Diogo Couto</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Syne:wght@800&display=swap');

			*, *::before, *::after { box-sizing: border-box; }

			body {
				margin: 0;
				background-color: #0d0d0d;
				color: #fff;
				font-family: 'Syne', sans-serif;
				overflow-x: hidden;
                cursor: none;
			}

            /* Noise e Cursor agora no GlobalEffects.astro */

			.container {
				max-width: 1650px;
				margin: 0 auto;
				padding: 100px 3vw 120px;
			}

			.back-home {
				display: inline-flex;
				align-items: center;
				gap: 8px;
				margin-bottom: 60px;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.75rem;
				color: #9acd32;
				text-decoration: none;
				letter-spacing: 0.2em;
				text-transform: uppercase;
				transition: all 0.3s;
                cursor: none;
			}
			.back-home:hover { opacity: 0.7; transform: translateX(-4px); }

			.page-header { margin-bottom: 80px; }

			h1 {
				font-size: clamp(3rem, 9vw, 10rem);
				margin: 0 0 20px;
				line-height: 0.9;
                position: relative;
                color: #fff;
			}

            h1::before, h1::after {
                content: "HACK\A THE\A BOX";
                white-space: pre;
                position: absolute;
                top: 0; left: 0;
                width: 100%; height: 100%;
                opacity: 0;
                pointer-events: none;
            }

            h1::before { color: #00ffff; z-index: -1; }
            h1::after { color: #ff00ff; z-index: -2; }

            .glitch-active::before {
                opacity: 0.7;
                animation: rgb-split-1 0.1s infinite alternate-reverse;
            }
            .glitch-active::after {
                opacity: 0.7;
                animation: rgb-split-2 0.1s infinite alternate;
            }

            @keyframes rgb-split-1 {
                0% { transform: translate(-6px, -2px); }
                100% { transform: translate(6px, 2px); }
            }

            @keyframes rgb-split-2 {
                0% { transform: translate(6px, 2px); }
                100% { transform: translate(-6px, -2px); }
            }

            .logo-wrapper {
                position: relative;
                width: clamp(200px, 28vw, 400px);
                height: auto;
                flex-shrink: 0;
            }

            .htb-logo {
                width: 100%;
                height: auto;
                mix-blend-mode: screen;
                filter:
                    drop-shadow(0 0 12px rgba(154, 205, 50, 0.8))
                    drop-shadow(0 0 30px rgba(154, 205, 50, 0.4))
                    drop-shadow(0 0 60px rgba(154, 205, 50, 0.2));
                animation: htbGlow 3s ease-in-out infinite alternate;
                position: relative;
                z-index: 2;
            }

            .logo-glitch {
                position: absolute;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background: inherit;
                mix-blend-mode: screen;
                opacity: 0;
                pointer-events: none;
                z-index: 1;
            }

            .logo-glitch.cyan { filter: hue-rotate(180deg) brightness(1.5); }
            .logo-glitch.magenta { filter: hue-rotate(300deg) brightness(1.5); }

            .glitch-active .logo-glitch { opacity: 0.7; }
            .glitch-active .logo-glitch.cyan { animation: rgb-split-1 0.1s infinite alternate-reverse; }
            .glitch-active .logo-glitch.magenta { animation: rgb-split-2 0.1s infinite alternate; }

			.page-header-inner {
				display: flex;
				align-items: center;
				justify-content: space-between;
				gap: 20px;
			}


			@keyframes htbGlow {
				from {
					filter:
						drop-shadow(0 0 8px rgba(154, 205, 50, 0.7))
						drop-shadow(0 0 20px rgba(154, 205, 50, 0.3));
				}
				to {
					filter:
						drop-shadow(0 0 16px rgba(154, 205, 50, 1))
						drop-shadow(0 0 40px rgba(154, 205, 50, 0.6))
						drop-shadow(0 0 80px rgba(154, 205, 50, 0.3));
				}
			}

			.machine-count {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.75rem;
				color: rgba(255,255,255,0.4);
				letter-spacing: 0.2em;
				text-transform: uppercase;
				margin-top: 16px;
			}
			.machine-count span { color: #9acd32; }

			.htb-grid {
                display: flex;
                gap: 40px;
				width: 100%;
                align-items: flex-start;
			}
            .htb-column {
                flex: 1 1 0px;
                min-width: 0;
                display: flex;
                flex-direction: column;
                gap: 40px;
            }

			.htb-card {
				background: rgba(255, 255, 255, 0.01);
				border: 1px solid rgba(255, 255, 255, 0.06);
				border-radius: 4px;
				padding: 40px;
				gap: 40px;
				transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                position: relative;
                overflow: hidden;
				display: grid;
                grid-template-columns: 53% 47%;
                grid-template-rows: 1fr auto;
                grid-template-areas: 
                    "info chart"
                    "btn chart";
                align-items: stretch;
                width: 100%;
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
                background-size: 30px 30px;
			}

            .htb-card::before {
                content: '';
                position: absolute;
                top: 0; left: 0;
                width: 3px; height: 100%;
                background: var(--diff-color, #9acd32);
                opacity: 0;
                transition: opacity 0.3s;
            }

			.htb-card:hover {
				background: rgba(255, 255, 255, 0.03);
				border-color: rgba(255, 255, 255, 0.15);
				transform: translateY(-4px);
			}
            .htb-card:hover::before { opacity: 1; }

			.htb-card-info {
                grid-area: info;
				display: flex;
				flex-direction: column;
				gap: 14px;
                width: 100%;
                flex-shrink: 0;
			}

			.htb-machine-header {
				display: flex;
				align-items: center;
				gap: 14px;
			}

			.htb-machine-avatar {
				width: 48px; height: 48px;
				border-radius: 50%;
				border: 1px solid rgba(154, 205, 50, 0.5);
				padding: 2px;
				object-fit: cover;
                flex-shrink: 0;
			}

			.htb-machine-name {
				font-size: 1.6rem;
				font-weight: 800;
				margin: 0;
                line-height: 1;
			}

			.htb-machine-meta {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.68rem;
				opacity: 0.55;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				display: flex;
				flex-direction: column;
				gap: 4px;
			}

			.htb-machine-meta span b { color: #9acd32; }

            .mobile-only-meta { display: none; }

			.diff-badge {
				display: inline-block;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.6rem;
				padding: 2px 8px;
				border-radius: 2px;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.1em;
                border: 1px solid;
                width: fit-content;
                border: 1px solid rgba(154, 205, 50, 0.3);
                background: rgba(154, 205, 50, 0.05);
			}

			.htb-description {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.72rem;
				line-height: 1.65;
				opacity: 0.7;
				margin: 15px 0 25px 0;
                display: block;
                text-align: justify;
                hyphens: auto;
			}

			.htb-chart-wrapper {
                grid-area: chart;
				position: relative;
				width: 100%;
                flex-shrink: 0;
				display: flex;
				align-items: center;
				justify-content: center;
				padding: 0;
                align-self: stretch; /* Match height of info section */
			}

			.htb-view-btn {
                grid-area: btn;
				margin-top: 30px;
				padding: 9px 18px;
				background: transparent;
				border: 1px solid rgba(255, 255, 255, 0.2);
				color: #fff;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.6rem;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				transition: all 0.3s;
				text-align: center;
				text-decoration: none;
				width: fit-content;
                cursor: none;
                align-self: end; /* Fixes consistency at the bottom */
			}
			.htb-view-btn:hover {
				background: #9acd32;
				color: #000;
				border-color: #9acd32;
			}

			.empty-state {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.85rem;
				color: rgba(255,255,255,0.3);
				text-align: center;
				padding: 80px 0;
				letter-spacing: 0.2em;
				text-transform: uppercase;
			}

			@media (max-width: 1200px) {
                .mobile-only-meta { display: block; }
				.htb-grid { 
                    flex-direction: column;
                    align-items: center;
                }
                .htb-column {
                    width: 100%;
                }
				.htb-card { 
                    display: flex;
                    flex-direction: column;
                    width: 100%;
                    max-width: 600px;
                    padding: 30px;
                    gap: 30px;
                    margin-left: auto;
                    margin-right: auto;
                    background-size: 20px 20px;
                }
                .htb-card-info, 
                .htb-chart-wrapper,
                .htb-view-btn { 
                    width: 100%; 
                    transform: none;
                    margin-top: 0;
                }
				.htb-chart-wrapper { 
                    aspect-ratio: 1; 
                    max-height: 400px; 
                    justify-content: center;
                    order: 2; /* Radar stays in middle */
                }
                .htb-card-info { order: 1; }
                .htb-view-btn { 
                    order: 3; /* Button goes to bottom */
                    width: 100%;
                    padding: 12px;
                }
                .htb-description { text-align: left; }
			}

            /* Filters Styling */
            .filters-container {
                display: flex;
                flex-wrap: wrap;
                gap: 20px;
                margin-bottom: 50px;
                font-family: 'JetBrains Mono', monospace;
            }

            .hidden {
                display: none !important;
            }

            .filter-group {
                display: flex;
                align-items: center;
                gap: 12px;
                background: rgba(255, 255, 255, 0.03);
                padding: 6px 15px;
                border-radius: 4px;
                border: 1px solid rgba(255, 255, 255, 0.05);
            }

            .filter-label {
                font-size: 0.6rem;
                text-transform: uppercase;
                letter-spacing: 0.1em;
                opacity: 0.4;
            }

            .filter-btn {
                background: none;
                border: none;
                color: #fff;
                font-size: 0.65rem;
                text-transform: uppercase;
                letter-spacing: 0.1em;
                cursor: pointer;
                opacity: 0.5;
                transition: all 0.3s;
                padding: 4px 8px;
                border-radius: 2px;
                border: 1px solid transparent;
            }

            .filter-btn:hover {
                opacity: 1;
                background: rgba(154, 205, 50, 0.05);
            }

            .filter-btn.active {
                opacity: 1;
                color: #9acd32;
                border-color: rgba(154, 205, 50, 0.3);
                background: rgba(154, 205, 50, 0.1);
            }

            .htb-grid {
                transition: opacity 0.3s ease;
            }

            .htb-card.hidden {
                display: none;
            }

            .no-results {
                text-align: center;
                padding: 40px 20px;
                opacity: 0.4;
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.8rem;
                letter-spacing: 0.15em;
                background: rgba(255, 255, 255, 0.02);
                border: 1px dashed rgba(255, 255, 255, 0.1);
                border-radius: 4px;
                margin-top: 0;
            }
		</style>
	</head>
	<body>
        <GlobalEffects />
		<main class="container">
			<a href="/" class="back-home">← Terminal_Root</a>

			<div class="page-header">
				<div class="page-header-inner" id="htb-parallax-target">
					<h1 id="htb-title">HACK<br/>THE<br/>BOX</h1>
                    <div class="logo-wrapper" id="htb-logo-wrapper">
                        <img
                            src={htbLogo.src}
                            alt="Hack The Box Logo"
                            class="htb-logo"
                        />
                        <img src={htbLogo.src} class="logo-glitch cyan" aria-hidden="true" />
                        <img src={htbLogo.src} class="logo-glitch magenta" aria-hidden="true" />
                    </div>
				</div>
				<p class="machine-count">
					<span id="pwned-count">{machines.length}</span> machine{machines.length !== 1 ? 's' : ''} pwned
				</p>
			</div>

            <div class="filters-container">
                <div class="filter-group">
                    <span class="filter-label">Difficulty:</span>
                    <button class="filter-btn active" data-filter="difficulty" data-value="all">All</button>
                    <button class="filter-btn" data-filter="difficulty" data-value="Easy">Easy</button>
                    <button class="filter-btn" data-filter="difficulty" data-value="Medium">Medium</button>
                    <button class="filter-btn" data-filter="difficulty" data-value="Hard">Hard</button>
                    <button class="filter-btn" data-filter="difficulty" data-value="Insane">Insane</button>
                </div>
                <div class="filter-group">
                    <span class="filter-label">OS:</span>
                    <button class="filter-btn active" data-filter="os" data-value="all">All</button>
                    <button class="filter-btn" data-filter="os" data-value="Linux">Linux</button>
                    <button class="filter-btn" data-filter="os" data-value="Windows">Windows</button>
                    <button class="filter-btn" data-filter="os" data-value="MacOS">MacOS</button>
                </div>
            </div>

			{machines.length === 0 ? (
				<div class="empty-state">// No machines found — Check GitHub connection</div>
			) : (
                <>
                    <div id="master-machines-list" style="display: none;">
                        {machines.map((machine) => {
                            const color = difficultyColor[machine.difficulty] || '#9acd32';
                            return (
                                <div
                                    class="htb-card machine-card"
                                    data-difficulty={machine.difficulty}
                                    data-os={machine.os}
                                    id={`card-${machine.id}`}
                                    style={`--diff-color: ${color};`}
                                >
                                    <div class="htb-card-info">
                                        <div class="htb-machine-header">
                                            {machine.avatar && (
                                                <Image
                                                    src={machine.avatar}
                                                    alt={machine.title}
                                                    class="htb-machine-avatar"
                                                    width={48}
                                                    height={48}
                                                />
                                            )}
                                            <div class={machine.avatar ? "" : "no-avatar-offset"}>
                                                <h3 class="htb-machine-name">{machine.title}</h3>
                                                <span class="diff-badge" style={`color: ${color}; border-color: ${color}; background: ${color}18`}>
                                                    {machine.difficulty}
                                                </span>
                                            </div>
                                        </div>
                                        <div class="htb-machine-meta">
                                            <span><b>OS:</b> {machine.os}</span>
                                            <span class="mobile-only-meta"><b>DIFFICULTY:</b> {machine.difficulty}</span>
                                            <span><b>Pwned:</b> {machine.pwnedDate}</span>
                                        </div>
                                        <p class="htb-description">{machine.description}</p>
                                    </div>
                                    <div class="htb-chart-wrapper">
                                        <canvas
                                            id={`chart-${machine.id}`}
                                            data-matrix={JSON.stringify(machine.matrix)}
                                            data-color={color}
                                        ></canvas>
                                    </div>
                                    <a href={`/htb/${machine.id}`} class="htb-view-btn">Ler Writeup →</a>
                                </div>
                            );
                        })}
                    </div>

                    <div class="htb-grid" id="machinesGrid">
                        <div id="no-results" class="no-results hidden">// No more machines match these filters</div>
                        <div class="htb-column" id="col-left"></div>
                        <div class="htb-column" id="col-right"></div>
                    </div>
                </>
			)}
		</main>

        <script>
            import gsap from 'gsap';

            // Glitch & Parallax Effect for Header
            const htbTitle = document.getElementById('htb-title');
            const htbLogoWrapper = document.getElementById('htb-logo-wrapper');
            const parallaxTarget = document.getElementById('htb-parallax-target');

            function triggerRandomGlitch() {
                if (!htbTitle || !htbLogoWrapper) return;

                htbTitle.classList.add('glitch-active');
                htbLogoWrapper.classList.add('glitch-active');

                const glitchDuration = Math.random() * 200 + 100;
                setTimeout(() => {
                    htbTitle.classList.remove('glitch-active');
                    htbLogoWrapper.classList.remove('glitch-active');
                    const nextGlitchIn = Math.random() * 3600 + 400;
                    setTimeout(triggerRandomGlitch, nextGlitchIn);
                }, glitchDuration);
            }

            window.addEventListener('load', () => {
                triggerRandomGlitch();
            });

            window.addEventListener('mousemove', (e) => {
                if (parallaxTarget) {
                    const moveX = (e.clientX - window.innerWidth / 2) / 40;
                    const moveY = (e.clientY - window.innerHeight / 2) / 40;
                    gsap.to(parallaxTarget, { x: moveX, y: moveY, duration: 1, ease: "power2.out" });
                }
            });

            // Radar Charts
            import Chart from 'chart.js/auto';
            const chartsMap = new Map();

            function initRadar(canvas: HTMLCanvasElement) {
                const ctx = canvas.getContext('2d');
                if (!ctx) return;

                // Destroy existing chart if it exists
                if (chartsMap.has(canvas.id)) {
                    chartsMap.get(canvas.id).destroy();
                }

                const matrixData = JSON.parse(canvas.dataset.matrix || '{}');
                const diffColor = canvas.dataset.color || '#9acd32';
                
                const newChart = new Chart(ctx, {
                    type: 'radar',
                    data: {
                        labels: ['ENUM', 'REAL', 'CVE', 'CUSTOM', 'CTF'],
                        datasets: [{
                            label: 'Machine Matrix',
                            data: [matrixData.ENUM, matrixData.REAL, matrixData.CVE, matrixData.CUSTOM, matrixData.CTF],
                            backgroundColor: `${diffColor}20`, // semi-transparent
                            borderColor: diffColor,
                            pointBackgroundColor: diffColor,
                            pointBorderColor: '#fff',
                            pointBorderWidth: 1,
                            pointRadius: 3,
                            borderWidth: 2,
                            fill: true,
                        }]
                    },
                    options: {
                        layout: {
                            padding: {
                                top: 10,
                                bottom: 10,
                                left: 15,
                                right: 15
                            }
                        },
                        scales: {
                            r: {
                                ticks: { display: false, stepSize: 20 },
                                grid: { color: 'rgba(255,255,255,0.08)' },
                                angleLines: { color: 'rgba(255,255,255,0.08)' },
                                pointLabels: {
                                    color: 'rgba(255,255,255,0.6)',
                                    font: { family: 'JetBrains Mono', size: 10 },
                                    padding: 10
                                },
                                suggestedMin: 0,
                                suggestedMax: 108
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            tooltip: { enabled: false }
                        },
                        responsive: true,
                        maintainAspectRatio: false
                    }
                });
                chartsMap.set(canvas.id, newChart);
            }

            // Initial chart setup (for all cards, even hidden ones, as they will be moved)
            window.addEventListener('load', () => {
                const canvases = document.querySelectorAll('canvas[id^="chart-"]');
                canvases.forEach((canvas) => initRadar(canvas as HTMLCanvasElement));
                updateFilters(); // Call updateFilters on load to distribute cards
            });


            // Filtering Logic
            const filterBtns = document.querySelectorAll('.filter-btn');

            let activeDifficulty = 'all';
            let activeOS = 'all';

            function updateFilters() {
                const diff = activeDifficulty;
                const os = activeOS;

                const masterList = document.getElementById('master-machines-list')!;
                const colLeft = document.getElementById('col-left')!;
                const colRight = document.getElementById('col-right')!;
                const noResults = document.getElementById('no-results');
                const machinesGrid = document.getElementById('machinesGrid');
                const pwnedCountEl = document.getElementById('pwned-count');
                const cards = Array.from(document.querySelectorAll('.machine-card')) as HTMLElement[];

                // Reset: Move all cards and the footer message back to storage/root
                if (noResults && machinesGrid) {
                    noResults.classList.add('hidden');
                    machinesGrid.prepend(noResults); // Move out of columns
                }

                cards.forEach(card => {
                    card.classList.add('hidden');
                    masterList.appendChild(card);
                });

                let visibleCount = 0;

                cards.forEach(card => {
                    const cardDiff = card.getAttribute('data-difficulty');
                    const cardOS = card.getAttribute('data-os');

                    const diffMatch = diff === 'all' || cardDiff === diff;
                    const osMatch = os === 'all' || cardOS === os;

                    if (diffMatch && osMatch) {
                        card.classList.remove('hidden');

                        // Real Masonry distribution
                        if (window.innerWidth > 1200) {
                            // If it's the first card, always go left to prioritize
                            if (visibleCount === 0) {
                                colLeft.appendChild(card);
                            } else {
                                const leftHeight = colLeft.offsetHeight;
                                const rightHeight = colRight.offsetHeight;
                                if (leftHeight <= rightHeight) {
                                    colLeft.appendChild(card);
                                } else {
                                    colRight.appendChild(card);
                                }
                            }
                        } else {
                            colLeft.appendChild(card);
                        }

                        visibleCount++;

                        // Re-init chart for this card
                        const canvas = card.querySelector('canvas');
                        if (canvas) initRadar(canvas as HTMLCanvasElement);
                    }
                });

                // Update machine count
                if (pwnedCountEl) pwnedCountEl.innerText = visibleCount.toString();

                // Handle footer message positioning
                if (noResults) {
                    if (visibleCount === 0) {
                        noResults.innerText = "// No machines match these filters";
                        colLeft.appendChild(noResults);
                    } else {
                        noResults.innerText = "// No more machines match these filters";
                        
                        // Always check heights again for the footer
                        if (window.innerWidth > 1200) {
                            const leftHeight = colLeft.offsetHeight;
                            const rightHeight = colRight.offsetHeight;
                            
                            // If heights are equal, prioritize right for footer if machines are on left
                            if (leftHeight > rightHeight) {
                                colRight.appendChild(noResults);
                            } else {
                                colLeft.appendChild(noResults);
                            }
                        } else {
                            colLeft.appendChild(noResults);
                        }
                    }
                    noResults.classList.remove('hidden');
                }
            }

            filterBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const filterType = (btn as HTMLElement).dataset.filter as 'difficulty' | 'os';
                    const filterValue = (btn as HTMLElement).dataset.value!;

                    // Update active filters
                    if (filterType === 'difficulty') {
                        activeDifficulty = filterValue;
                    } else if (filterType === 'os') {
                        activeOS = filterValue;
                    }

                    // Update UI buttons
                    document.querySelectorAll(`.filter-btn[data-filter="${filterType}"]`).forEach(b => {
                        b.classList.remove('active');
                    });
                    btn.classList.add('active');

                    // Apply filters
                    updateFilters();
                });
            });
        </script>
