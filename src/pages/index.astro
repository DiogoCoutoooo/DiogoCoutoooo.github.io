---
<html lang="pt">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Diogo Couto | Cyber Security Engineer</title>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&family=Syne:wght@800&display=swap');

            body {
                margin: 0;
                background-color: #0d0d0d;
                color: #fff;
                font-family: 'Syne', sans-serif;
                overflow-x: hidden;
                cursor: none;
                position: relative;
            }

            /* Esconder barra de scroll para Chrome, Safari e Opera */
            ::-webkit-scrollbar {
                display: none;
            }

            /* Esconder barra de scroll para IE, Edge e Firefox */
            html {
                -ms-overflow-style: none;  /* IE and Edge */
                scrollbar-width: none;  /* Firefox */
            }

            /* Grelha de Engenharia Subtil */
            body::after {
                content: "";
                position: fixed;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
                background-size: 40px 40px;
                pointer-events: none;
                z-index: -1;
            }

            /* Noise Dinâmico (Textura de monitor) */
            .noise-overlay {
                position: fixed;
                top: -50%; left: -50%; width: 200%; height: 200%;
                background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3BaseFilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='3' stitchTiles='stitch'/%3E%3C/feFilter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
                opacity: 0.06;
                pointer-events: none; 
                z-index: 9999;
                animation: noise-move 0.2s steps(3) infinite;
            }

            @keyframes noise-move {
                0% { transform: translate(0,0) }
                50% { transform: translate(-1%, 1%) }
                100% { transform: translate(1%, -1%) }
            }

            /* --- HERO & GLITCH --- */
            .hero-main {
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
            }

            h1 { 
                font-size: clamp(3rem, 15vw, 15rem); 
                line-height: 0.9;
                margin: 0;
                text-align: center;
                position: relative;
                color: #fff;
                text-shadow: 2px 2px 0px rgba(255,255,255,0.1), 4px 4px 0px rgba(0,0,0,1);
            }

            h1::before, h1::after {
                content: "DIOGO\A COUTO";
                white-space: pre;
                position: absolute;
                top: 0; left: 0;
                width: 100%; height: 100%;
                opacity: 0;
                pointer-events: none;
            }

            h1::before { color: #00ffff; z-index: -1; }
            h1::after { color: #ff00ff; z-index: -2; }

            .glitch-active::before {
                opacity: 0.7;
                animation: rgb-split-1 0.1s infinite alternate-reverse;
            }
            .glitch-active::after {
                opacity: 0.7;
                animation: rgb-split-2 0.1s infinite alternate;
            }

            @keyframes rgb-split-1 {
                0% { transform: translate(-6px, -2px); }
                100% { transform: translate(6px, 2px); }
            }

            @keyframes rgb-split-2 {
                0% { transform: translate(6px, 2px); }
                100% { transform: translate(-6px, -2px); }
            }

            /* --- LAYOUT & DETAILS --- */
            .tech-details {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.7rem;
                text-transform: uppercase;
                letter-spacing: 0.2em;
                position: absolute;
                width: 90%;
                display: flex;
                justify-content: space-between;
                top: 5vh;
                z-index: 10;
            }

            .status-decrypting { color: #ff4d4d; animation: pulse-red 1.5s infinite; }
            .status-secured { color: #00ff41; text-shadow: 0 0 8px rgba(0, 255, 65, 0.5); }

            @keyframes pulse-red { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }

            .cursor-follower {
                position: fixed; width: 10px; height: 10px; background-color: #fff;
                border-radius: 50%; pointer-events: none; z-index: 10000; mix-blend-mode: difference;
            }

            section { width: 100%; position: relative; display: flex; flex-direction: column; align-items: center; }
            .cap-1 { min-height: 110vh; background-color: transparent; } /* Reduzido para o texto aparecer mais cedo */
            .cap-2 { height: 100vh; background-color: #0f0f0f; justify-content: center; }
            .cap-3 { height: 100vh; background-color: #141414; justify-content: center; }

            .sub-info { font-family: 'JetBrains Mono', monospace; font-size: 0.9rem; margin-top: 20px; color: #444; }
            .content-block { width: 100%; max-width: 1200px; padding: 10vh 5vw 30vh 5vw; box-sizing: border-box; }
            .biography { font-size: 2.5rem; line-height: 1.2; max-width: 800px; }
            .biography span { color: #555; transition: color 0.5s; }
            .biography span:hover { color: #fff; }

            .sticky-bar {
                position: absolute; bottom: 0; left: 0; width: 100%; height: 60px;
                background: rgba(10, 10, 10, 0.9); backdrop-filter: blur(15px);
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                display: flex; align-items: center; justify-content: center; z-index: 100;
            }
            .is-locked { position: fixed; bottom: auto; }
            .nav-button {
                background: none; border: none; color: #fff; font-family: 'JetBrains Mono', monospace;
                font-size: 0.65rem; letter-spacing: 0.3em; text-transform: uppercase;
                display: flex; align-items: center; gap: 15px; opacity: 0; transition: opacity 0.4s; cursor: pointer;
            }
            .is-locked .nav-button { opacity: 0.6; }
            .is-locked .nav-button:hover { opacity: 1; }
            .arrow-up { width: 6px; height: 6px; border-left: 2px solid #fff; border-top: 2px solid #fff; transform: rotate(45deg); }

			.biography-container {
			    display: flex;
			    flex-direction: column;
			    align-items: flex-start;
			    gap: 20px;
			    width: 100%;
			}

			.bio-freeze-section {
                height: 400vh;
                background: transparent;
                width: 100%;
                position: relative;
                z-index: 5;
            }

            .bio-content-pin {
                height: 100vh;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 100%;
                max-width: 750px; /* Ainda mais estreito para margens maiores */
                margin: 0 auto;
                padding: 0 4vw;
                box-sizing: border-box;
            }

            .bio-row {
                display: flex;
                justify-content: center;
                gap: 2vw;
                margin: 0.2em 0;
            }

            .bio-word {
                font-size: clamp(1.2rem, 3.8vw, 4.8rem); /* Fonte menor e mais elegante */
                font-weight: 800;
                color: #fff;
                opacity: 0;
                letter-spacing: -0.01em;
                line-height: 1.2;
                white-space: nowrap;
                text-transform: uppercase;
            }

            .bio-word span {
                color: #fff;
                text-shadow: 0 0 50px rgba(255,255,255,0.4);
            }

			/* Contentor específico para a figura 3D */
			.canvas-wrapper {
			    width: 100vw;
			    left: 50%;
			    right: 50%;
			    margin-left: -50vw;
			    margin-right: -50vw;
			    height: 850px;
			    position: relative;
			    overflow: visible;
			}

			/* Garante que o container interno acompanhe */
			#three-canvas-container {
			    width: 100% !important;
			    height: 100% !important;
			    cursor: grab; /* Feedback visual que o objeto é interativo */
			}

			#three-canvas-container:active {
			    cursor: grabbing;
			}
        </style>
    </head>
    <body>
        <div class="noise-overlay"></div>
        <div class="cursor-follower"></div>

        <main>
            <section id="cap1" class="cap-1">
                <div class="tech-details">
                    <span id="status-line" class="status-decrypting">STATUS: DECRYPTING_</span>
                    <span id="coords-line" data-value="LOC: 38.7223° N, 9.1393° W">LOC: XX.XXXX° X, X.XXXX° X</span>
                </div>

                <div class="hero-main">
                    <h1 id="hero-title">DIOGO<br/>COUTO</h1>
                    <p class="sub-info">[ Computer Science & Cyber Security ]</p>
                </div>

				<div class="bio-freeze-section" id="bio-trigger">
                    <div class="bio-content-pin">
                        <div class="bio-row">
                            <span class="bio-word">LOREM</span>
                            <span class="bio-word">IPSUM</span>
                            <span class="bio-word">DOLOR</span>
                            <span class="bio-word">SIT</span>
                        </div>
                        <div class="bio-row">
                            <span class="bio-word">AMET</span>
                            <span class="bio-word">CONSECTETUR</span>
                        </div>
                        <div class="bio-row">
                            <span class="bio-word">ADIPISCING</span>
                            <span class="bio-word">ELIT</span>
                            <span class="bio-word">DOREM.</span>
                        </div>
                    </div>
                </div>

                <div class="sticky-bar" data-target="#cap1">
                    <button class="nav-button"><div class="arrow-up"></div><span>Root_Directory</span></button>
                </div>
            </section>

            <section id="cap2" class="cap-2">
                <h2 style="font-size: 10vw;">PROJECTS</h2>
                <div class="sticky-bar" data-target="#cap2">
                    <button class="nav-button"><div class="arrow-up"></div><span>Security_Audit</span></button>
                </div>
            </section>

            <section id="cap3" class="cap-3">
                <h2 style="font-size: 10vw;">CONTACT</h2>
                <div class="sticky-bar" data-target="#cap3">
                    <button class="nav-button"><div class="arrow-up"></div><span>Encrypted_Mail</span></button>
                </div>
            </section>
        </main>

        <script>
            import gsap from 'gsap';
            import { ScrollTrigger } from 'gsap/ScrollTrigger';
            import Lenis from '@studio-freight/lenis';

            gsap.registerPlugin(ScrollTrigger);

            const lenis = new Lenis();
            
            // Sincroniza o ScrollTrigger com o Lenis
            lenis.on('scroll', ScrollTrigger.update);
            
            function raf(time: number) { 
                lenis.raf(time); 
                requestAnimationFrame(raf); 
            }
            requestAnimationFrame(raf);

            const heroTitle = document.getElementById('hero-title') as HTMLElement;
            const statusEl = document.getElementById('status-line') as HTMLElement;
            const coordsEl = document.getElementById('coords-line') as HTMLElement;
            const cursor = document.querySelector('.cursor-follower') as HTMLElement;

            function triggerRandomGlitch() {
                if (!heroTitle) return;
                heroTitle.classList.add('glitch-active');
                const glitchDuration = Math.random() * 200 + 100; 
                setTimeout(() => {
                    heroTitle.classList.remove('glitch-active');
                    const nextGlitchIn = Math.random() * 3600 + 400;
                    setTimeout(triggerRandomGlitch, nextGlitchIn);
                }, glitchDuration);
            }

            const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&*";

            async function decryptCoords() {
                let iteration = 0;
                const finalValue = coordsEl.dataset.value || "";
                return new Promise<void>((resolve) => {
                    const interval = setInterval(() => {
                        coordsEl.innerText = finalValue.split("").map((l, i) => 
                            i < iteration ? finalValue[i] : letters[Math.floor(Math.random() * letters.length)]
                        ).join("");
                        if(iteration >= finalValue.length) { clearInterval(interval); resolve(); }
                        iteration += 1/3;
                    }, 40);
                });
            }

            async function updateStatus() {
                const prefix = "STATUS: ";
                const oldT = "DECRYPTING_";
                const newT = "SECURED_";
                for (let i = oldT.length; i >= 0; i--) {
                    statusEl.innerText = prefix + oldT.substring(0, i);
                    await new Promise(r => setTimeout(r, 60));
                }
                for (let i = 0; i <= newT.length; i++) {
                    statusEl.innerText = prefix + newT.substring(0, i);
                    await new Promise(r => setTimeout(r, 80));
                }
                statusEl.classList.replace('status-decrypting', 'status-secured');
            }

            window.addEventListener('load', async () => {
                //await decryptCoords();
                //await updateStatus();
                triggerRandomGlitch();

                // --- ANIMATION: BIO FREEZE REVEAL ---
                const words = document.querySelectorAll('.bio-word');
                
                gsap.set(words, { y: "100vh", opacity: 0 });

                const tl = gsap.timeline({
                    scrollTrigger: {
                        trigger: "#bio-trigger",
                        start: "top 30%", // Inicia muito mais cedo (30% do ecrã)
                        end: "+=3000",
                        pin: true,
                        scrub: 0.8,
                    }
                });

                // Entrada das palavras (Começa IMEDIATAMENTE no início do freeze)
                tl.to(words, {
                    y: 0,
                    opacity: 1,
                    stagger: 0.1,
                    ease: "power2.out",
                    duration: 1.2
                }, 0.1); // Delay mínimo para iniciar logo

                // Saída (Fluidez total)
                tl.to(words, {
                    opacity: 0,
                    y: "-20vh",
                    stagger: 0.05,
                    ease: "power2.in",
                    duration: 1
                }, "+=0.5");
            });

            window.addEventListener('mousemove', (e) => {
                if (cursor) gsap.to(cursor, { x: e.clientX, y: e.clientY, duration: 0.3 });
                if (heroTitle) {
                    const moveX = (e.clientX - window.innerWidth / 2) / 30;
                    const moveY = (e.clientY - window.innerHeight / 2) / 30;
                    gsap.to(heroTitle, { x: moveX, y: moveY, duration: 1 });
                }
            });

            document.querySelectorAll('.sticky-bar').forEach((el, index) => {
                const bar = el as HTMLElement;
                const section = bar.closest('section');
                const targetId = bar.getAttribute('data-target');
                const offsetTop = index * 60;

                if (section) {
                    ScrollTrigger.create({
                        trigger: section,
                        start: `bottom ${60 + offsetTop}px`,
                        onEnter: () => {
                            bar.classList.add('is-locked');
                            bar.style.top = `${offsetTop}px`;
                        },
                        onLeaveBack: () => {
                            bar.classList.remove('is-locked');
                            bar.style.top = `auto`;
                        }
                    });
                }

                bar.addEventListener('click', () => {
                    if (targetId) lenis.scrollTo(targetId, { duration: 1.2 });
                });
            });
        </script>
    </body>
</html>