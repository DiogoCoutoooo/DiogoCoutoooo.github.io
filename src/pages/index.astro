---
// src/pages/index.astro
import { Image } from 'astro:assets';
import profileImage from '../assets/images/bimpson.jpg';
---
<html lang="pt">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Diogo Couto | Cyber Security Engineer</title>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&family=Syne:wght@800&display=swap');

            body {
                margin: 0;
                background-color: #0d0d0d;
                color: #fff;
                font-family: 'Syne', sans-serif;
                overflow-x: hidden;
                cursor: none;
                position: relative;
            }

            /* Esconder barra de scroll para Chrome, Safari e Opera */
            ::-webkit-scrollbar {
                display: none;
            }

            /* Esconder barra de scroll para IE, Edge e Firefox */
            html {
                -ms-overflow-style: none;  /* IE and Edge */
                scrollbar-width: none;  /* Firefox */
            }

            /* Grelha de Engenharia Subtil */
            body::after {
                content: "";
                position: fixed;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background-image: 
                    linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
                    linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
                background-size: 40px 40px;
                pointer-events: none;
                z-index: -1;
            }

            /* Noise Dinâmico (Textura de monitor) */
            .noise-overlay {
                position: fixed;
                top: -50%; left: -50%; width: 200%; height: 200%;
                background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3BaseFilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.75' numOctaves='3' stitchTiles='stitch'/%3E%3C/feFilter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
                opacity: 0.06;
                pointer-events: none; 
                z-index: 9999;
                animation: noise-move 0.2s steps(3) infinite;
            }

            @keyframes noise-move {
                0% { transform: translate(0,0) }
                50% { transform: translate(-1%, 1%) }
                100% { transform: translate(1%, -1%) }
            }

            /* --- HERO & GLITCH --- */
            .hero-main {
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
            }

            h1 { 
                font-size: clamp(3rem, 15vw, 15rem); 
                line-height: 0.9;
                margin: 0;
                text-align: center;
                position: relative;
                color: #fff;
                text-shadow: 2px 2px 0px rgba(255,255,255,0.1), 4px 4px 0px rgba(0,0,0,1);
            }

            h1::before, h1::after {
                content: "DIOGO\A COUTO";
                white-space: pre;
                position: absolute;
                top: 0; left: 0;
                width: 100%; height: 100%;
                opacity: 0;
                pointer-events: none;
            }

            h1::before { color: #00ffff; z-index: -1; }
            h1::after { color: #ff00ff; z-index: -2; }

            .glitch-active::before {
                opacity: 0.7;
                animation: rgb-split-1 0.1s infinite alternate-reverse;
            }
            .glitch-active::after {
                opacity: 0.7;
                animation: rgb-split-2 0.1s infinite alternate;
            }

            @keyframes rgb-split-1 {
                0% { transform: translate(-6px, -2px); }
                100% { transform: translate(6px, 2px); }
            }

            @keyframes rgb-split-2 {
                0% { transform: translate(6px, 2px); }
                100% { transform: translate(-6px, -2px); }
            }

            /* --- LAYOUT & DETAILS --- */
            .tech-details {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.7rem;
                text-transform: uppercase;
                letter-spacing: 0.2em;
                position: absolute;
                width: 90%;
                display: flex;
                justify-content: space-between;
                top: 5vh;
                z-index: 10;
            }

            .status-decrypting { color: #ff4d4d; animation: pulse-red 1.5s infinite; }
            .status-secured { color: #00ff41; text-shadow: 0 0 8px rgba(0, 255, 65, 0.5); }

            @keyframes pulse-red { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }

            .cursor-follower {
                position: fixed; width: 10px; height: 10px; background-color: #fff;
                border-radius: 50%; pointer-events: none; z-index: 10000; mix-blend-mode: difference;
            }

            .boot-progress-bar {
                position: fixed;
                top: 0;
                left: 0;
                width: 0%;
                height: 2px;
                background: #ff4d4d;
                z-index: 10001;
                transition: background 0.5s;
            }

            .boot-progress-bar.loaded {
                background: #00ff41;
            }

            .scroll-indicator-label {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.6rem;
                letter-spacing: 0.1em;
                margin-left: 20px;
                padding: 2px 8px;
                border: 1px solid currentColor;
                opacity: 0.8;
            }

            section { width: 100%; position: relative; display: flex; flex-direction: column; align-items: center; }
            .cap-1 { min-height: 110vh; background-color: transparent; } /* Reduzido para o texto aparecer mais cedo */
            .cap-2 { height: 100vh; background-color: #0f0f0f; justify-content: center; }
            .cap-3 { height: 100vh; background-color: #141414; justify-content: center; }

            .sub-info { font-family: 'JetBrains Mono', monospace; font-size: 0.9rem; margin-top: 20px; color: #444; }
            .content-block { width: 100%; max-width: 1200px; padding: 10vh 5vw 30vh 5vw; box-sizing: border-box; }
            .biography { font-size: 2.5rem; line-height: 1.2; max-width: 800px; }
            .biography span { color: #555; transition: color 0.5s; }
            .biography span:hover { color: #fff; }

            .sticky-bar {
                position: absolute; bottom: 0; left: 0; width: 100%; height: 60px;
                background: rgba(10, 10, 10, 0.9); backdrop-filter: blur(15px);
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                display: flex; align-items: center; justify-content: center; z-index: 100;
            }
            .is-locked { position: fixed; bottom: auto; }
            .nav-button {
                background: none; border: none; color: #fff; font-family: 'JetBrains Mono', monospace;
                font-size: 0.65rem; letter-spacing: 0.3em; text-transform: uppercase;
                display: flex; align-items: center; gap: 15px; opacity: 0; transition: opacity 0.4s; cursor: pointer;
            }
            .is-locked .nav-button { opacity: 0.6; }
            .is-locked .nav-button:hover { opacity: 1; }
            .arrow-up { width: 6px; height: 6px; border-left: 2px solid #fff; border-top: 2px solid #fff; transform: rotate(45deg); }

            body.scroll-locked {
                overflow: hidden !important;
                height: 100vh;
                overscroll-behavior: none;
            }

			.biography-container {
			    display: flex;
			    flex-direction: column;
			    align-items: flex-start;
			    gap: 20px;
			    width: 100%;
			}

			.bio-freeze-section {
                height: 400vh;
                background: transparent;
                width: 100%;
                position: relative;
                z-index: 5;
            }

            .bio-content-pin {
                height: 100vh;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 100%;
                max-width: 1300px; /* Aumentado para dar mais espaço lateral */
                margin: 0 auto;
                padding: 0 4vw;
                box-sizing: border-box;
                transform: translateY(-25vh); /* Pequeno ajuste global para centragem */
            }

            .bio-row {
                display: flex;
                justify-content: center;
                gap: 2vw;
                margin: 0.2em 0;
            }

            .bio-word {
                font-size: clamp(3rem, 12vw, 12rem); /* Fonte significativamente maior */
                font-weight: 800;
                color: #fff;
                opacity: 0;
                letter-spacing: -0.01em;
                line-height: 1.2;
                white-space: nowrap;
                text-transform: uppercase;
            }

            .bio-word span {
                color: #fff;
                text-shadow: 0 0 50px rgba(255,255,255,0.4);
            }

            /* --- PHOTO & CONSOLE --- */
            .bio-top-grid {
                display: grid;
                grid-template-columns: 1fr 1.5fr;
                gap: 220px; 
                width: 100%;
                margin-bottom: 15vh; /* Empurra o texto Who Am I para baixo */
                align-items: center;
            }

            .photo-placeholder {
                width: 100%;
                aspect-ratio: 4/5;
                background: rgba(255, 255, 255, 0.03);
                border: 1px solid rgba(255, 255, 255, 0.1);
                position: relative;
                overflow: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0; /* Começa escondido */
            }

            .photo-placeholder img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: 0.8;
                filter: grayscale(100%) contrast(1.2);
                transition: opacity 0.5s, filter 0.5s;
            }

            .photo-placeholder:hover img {
                opacity: 1;
                filter: grayscale(0%) contrast(1);
            }

            .photo-placeholder::after {
                content: "";
            }

            .bio-console {
                background: rgba(0, 0, 0, 0.8);
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 4px;
                font-family: 'JetBrains Mono', monospace;
                padding: 15px;
                height: 250px;
                display: flex;
                flex-direction: column;
                position: relative;
                opacity: 0; /* Começa escondido */
            }

            .console-header {
                display: flex;
                gap: 6px;
                margin-bottom: 12px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
                padding-bottom: 8px;
            }

            .dot { width: 8px; height: 8px; border-radius: 50%; background: #333; }
            .dot.red { background: #ff5f56; }
            .dot.yellow { background: #ffbd2e; }
            .dot.green { background: #27c93f; }

            .console-text {
                font-size: 0.9rem;
                line-height: 1.5;
                color: #00ff41;
                text-shadow: 0 0 5px rgba(0, 255, 65, 0.2);
            }

            .cursor-blink {
                display: inline-block;
                width: 8px;
                height: 15px;
                background: #00ff41;
                margin-left: 4px;
                animation: blink 1s step-end infinite;
            }

            @keyframes blink { 50% { opacity: 0; } }

			/* Contentor específico para a figura 3D */
			.canvas-wrapper {
			    width: 100%;
			    height: 850px;
			    position: relative;
			    z-index: 50; /* Garantir que está acima de elementos da Bio */
			    overflow: visible;
                pointer-events: auto;
			}

			/* Garante que o container interno acompanhe */
			#three-canvas-container {
			    width: 100%;
			    height: 100%;
			    cursor: grab;
			}

			#three-canvas-container:active {
			    cursor: grabbing;
			}
        </style>
    </head>
    <body>
        <div class="boot-progress-bar" id="boot-bar"></div>
        <div class="noise-overlay"></div>
        <div class="cursor-follower"></div>

        <main>
            <section id="cap1" class="cap-1">
                <div class="tech-details">
                    <div style="display: flex; align-items: center;">
                        <span id="status-line" class="status-decrypting">STATUS: DECRYPTING_</span>
                        <span id="scroll-status" class="scroll-indicator-label status-decrypting">SCROLL_LOCKED</span>
                    </div>
                    <span id="coords-line" data-value="LOC: 38.6607° N, 9.2035° W">LOC: XX.XXXX° X, X.XXXX° X</span>
                </div>

                <div class="hero-main">
                    <h1 id="hero-title" data-value="DIOGO COUTO">XXXXX<br/>XXXXX</h1>
                    <p class="sub-info" id="sub-info" data-value="[ Computer Science & Cyber Security ]">[ XXXXXXXX XXXXXXX & XXXXX XXXXXXXX ]</p>
                </div>

				<div class="bio-freeze-section" id="bio-trigger">
                    <div class="bio-content-pin">
                        <div class="bio-top-grid">
                            <div class="photo-placeholder" id="bio-photo">
                                <Image src={profileImage} alt="Diogo Couto" />
                            </div>
                            <div class="bio-console" id="bio-console">
                                <div class="console-header">
                                    <div class="dot red"></div>
                                    <div class="dot yellow"></div>
                                    <div class="dot green"></div>
                                    <span style="font-size: 0.6rem; opacity: 0.4; margin-left: 10px;">identity_v2.terminal</span>
                                </div>
                                <div class="console-text" id="console-typing-area">
                                    <span id="typed-text"></span><span class="cursor-blink"></span>
                                </div>
                            </div>
                        </div>
                        <div class="bio-row">
                            <span class="bio-word">WHO</span>
                            <span class="bio-word">AM</span>
                            <span class="bio-word">I?</span>
                        </div>
                    </div>
                </div> 

                <div class="sticky-bar" data-target="#cap1">
                    <button class="nav-button"><div class="arrow-up"></div><span>Root_Directory</span></button>
                </div>
            </section>

            <section id="cap2" class="cap-2">
                <h2 style="font-size: 10vw;">PROJECTS</h2>

                <div class="sticky-bar" data-target="#cap2">
                    <button class="nav-button"><div class="arrow-up"></div><span>Security_Audit</span></button>
                </div>
            </section>

            <section id="cap3" class="cap-3">
                <h2 style="font-size: 10vw;">CONTACT</h2>
                <div class="sticky-bar" data-target="#cap3">
                    <button class="nav-button"><div class="arrow-up"></div><span>Encrypted_Mail</span></button>
                </div>
            </section>
        </main>

        <script>
            import gsap from 'gsap';
            import { ScrollTrigger } from 'gsap/ScrollTrigger';
            import Lenis from '@studio-freight/lenis';

            gsap.registerPlugin(ScrollTrigger);

            const lenis = new Lenis();
            
            // Sincroniza o ScrollTrigger com o Lenis
            lenis.on('scroll', ScrollTrigger.update);
            
            function raf(time: number) { 
                lenis.raf(time); 
                requestAnimationFrame(raf); 
            }
            requestAnimationFrame(raf);

            const heroTitle = document.getElementById('hero-title') as HTMLElement;
            const heroSubtitle = document.getElementById('sub-info') as HTMLElement;
            const statusEl = document.getElementById('status-line') as HTMLElement;
            const coordsEl = document.getElementById('coords-line') as HTMLElement;
            const cursor = document.querySelector('.cursor-follower') as HTMLElement;

            function triggerRandomGlitch() {
                if (!heroTitle) return;
                heroTitle.classList.add('glitch-active');
                const glitchDuration = Math.random() * 200 + 100; 
                setTimeout(() => {
                    heroTitle.classList.remove('glitch-active');
                    const nextGlitchIn = Math.random() * 3600 + 400;
                    setTimeout(triggerRandomGlitch, nextGlitchIn);
                }, glitchDuration);
            }

            const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&*";

            async function decryptElement(el: HTMLElement) {
                if (!el) return;
                let iteration = 0;
                const finalValue = el.dataset.value || "";
                const isTitle = el.id === 'hero-title';
                
                return new Promise<void>((resolve) => {
                    const interval = setInterval(() => {
                        let text = finalValue.split("").map((l, i) => 
                            i < iteration ? finalValue[i] : letters[Math.floor(Math.random() * letters.length)]
                        ).join("");
                        
                        if (isTitle) {
                            // Mantém o break line para o título
                            const part1 = text.substring(0, 5);
                            const part2 = text.substring(5).trim();
                            el.innerHTML = `${part1}<br/>${part2}`;
                        } else {
                            el.innerText = text;
                        }

                        if(iteration >= finalValue.length) { 
                            clearInterval(interval); 
                            resolve(); 
                        }
                        iteration += 1/3;
                    }, 40);
                });
            }

            async function updateStatus() {
                const prefix = "STATUS: ";
                const oldT = "DECRYPTING_";
                const newT = "SECURED_";
                for (let i = oldT.length; i >= 0; i--) {
                    statusEl.innerText = prefix + oldT.substring(0, i);
                    await new Promise(r => setTimeout(r, 60));
                }
                for (let i = 0; i <= newT.length; i++) {
                    statusEl.innerText = prefix + newT.substring(0, i);
                    await new Promise(r => setTimeout(r, 80));
                }
                statusEl.classList.replace('status-decrypting', 'status-secured');
                
                // Sincronização imediata da barra e do status de scroll
                const bootBar = document.getElementById('boot-bar');
                const scrollStatusLine = document.getElementById('scroll-status');
                if (bootBar) bootBar.classList.add('loaded');
                if (scrollStatusLine) {
                    scrollStatusLine.innerText = "ACCESS_GRANTED";
                    scrollStatusLine.classList.replace('status-decrypting', 'status-secured');
                }
            }

            window.addEventListener('load', async () => {
                // --- INITIAL STATE SETUP --- 
                // Impede o browser de restaurar a posição do scroll ao dar refresh
                if ('scrollRestoration' in history) {
                    history.scrollRestoration = 'manual';
                }
                lenis.scrollTo(0, { immediate: true });

                const words = document.querySelectorAll('.bio-word');
                const photo = document.getElementById('bio-photo');
                const consoleEl = document.getElementById('bio-console');
                const typedTextEl = document.getElementById('typed-text');
                
                const bioMessage = "I’m a CS student who lives for the logic of a well-solved problem. Whether it's building an app from scratch or debugging a mess of code, I actually enjoy the challenge. I’m always down to pick up whatever tech comes my way - I just want to build cool stuff.";

                gsap.set(words, { y: "100vh", opacity: 0 });
                gsap.set(photo, { x: "-100vw", opacity: 0 });
                gsap.set(consoleEl, { x: "100vw", opacity: 0 });

                // Bloquear scroll inicial
                lenis.stop();
                document.body.classList.add('scroll-locked');
                
                const preventScroll = (e: Event) => {
                    e.preventDefault();
                    e.stopPropagation();
                    return false;
                };

                const blockKeys = (e: KeyboardEvent) => {
                    const keys = ['ArrowUp', 'ArrowDown', 'Space', ' ', 'PageUp', 'PageDown', 'Home', 'End'];
                    if (keys.includes(e.key)) {
                        e.preventDefault();
                        return false;
                    }
                };

                window.addEventListener('wheel', preventScroll, { passive: false });
                window.addEventListener('touchmove', preventScroll, { passive: false });
                window.addEventListener('keydown', blockKeys, { passive: false });

                const bootBar = document.getElementById('boot-bar');
                const scrollStatusLine = document.getElementById('scroll-status');

                // Animação da barra de progresso (fingida até 95%)
                const barTween = gsap.to(bootBar, { width: "100%", duration: 5.5, ease: "power1.inOut" });

                // Agora sim, arrancamos com as animações de texto da Hero
                await Promise.all([
                    decryptElement(coordsEl),
                    decryptElement(heroTitle),
                    decryptElement(heroSubtitle)
                ]);
                await updateStatus();
                
                // Desbloquear scroll
                barTween.kill();
                if (bootBar) bootBar.style.width = "100%";
                
                window.removeEventListener('wheel', preventScroll);
                window.removeEventListener('touchmove', preventScroll);
                window.removeEventListener('keydown', blockKeys);
                document.body.classList.remove('scroll-locked');
                
                lenis.start();
                triggerRandomGlitch();

                // --- ANIMATION: BIO FREEZE REVEAL ---
                const tl = gsap.timeline({
                    scrollTrigger: {
                        trigger: "#bio-trigger",
                        start: "top 30%", 
                        end: "+=3000",
                        pin: true,
                        scrub: 0.8,
                    }
                });

                // Entrada dos elementos laterais
                tl.to([photo, consoleEl], {
                    x: 0,
                    opacity: 1,
                    duration: 1.5,
                    ease: "power3.out"
                }, 0);

                // Entrada das palavras
                tl.to(words, {
                    y: 0,
                    opacity: 1,
                    stagger: 0.1,
                    ease: "power2.out",
                    duration: 1.2
                }, 0.5);

                // Efeito de escrita no terminal (Typewriter)
                tl.to({}, {
                    duration: 2,
                    onUpdate: function() {
                        const progress = this.progress();
                        const len = Math.floor(bioMessage.length * progress);
                        if (typedTextEl) typedTextEl.innerText = bioMessage.substring(0, len);
                    }
                }, 0.8);

                // Saída
                tl.to([words, photo, consoleEl], {
                    opacity: 0,
                    y: "-10vh",
                    stagger: 0.05,
                    ease: "power2.in",
                    duration: 1
                }, "+=0.5");
            });

            window.addEventListener('mousemove', (e) => {
                if (cursor) gsap.to(cursor, { x: e.clientX, y: e.clientY, duration: 0.3 });
                if (heroTitle) {
                    const moveX = (e.clientX - window.innerWidth / 2) / 30;
                    const moveY = (e.clientY - window.innerHeight / 2) / 30;
                    gsap.to(heroTitle, { x: moveX, y: moveY, duration: 1 });
                }
            });

            document.querySelectorAll('.sticky-bar').forEach((el, index) => {
                const bar = el as HTMLElement;
                const section = bar.closest('section');
                const targetId = bar.getAttribute('data-target');
                const offsetTop = index * 60;

                if (section) {
                    ScrollTrigger.create({
                        trigger: section,
                        start: `bottom ${60 + offsetTop}px`,
                        onEnter: () => {
                            bar.classList.add('is-locked');
                            bar.style.top = `${offsetTop}px`;
                        },
                        onLeaveBack: () => {
                            bar.classList.remove('is-locked');
                            bar.style.top = `auto`;
                        }
                    });
                }

                bar.addEventListener('click', () => {
                    if (targetId) lenis.scrollTo(targetId, { duration: 1.2 });
                });
            });
        </script>
    </body>
</html>