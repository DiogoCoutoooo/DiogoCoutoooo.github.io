---
// src/pages/index.astro
import { Image } from 'astro:assets';
import profileImage from '../assets/images/bimpson.jpg';
import GlobalEffects from '../components/GlobalEffects.astro';

import machinesData from '../data/machines.json';

const displayMachines = machinesData.length > 0 ? [machinesData[0]] : [];

const getMachineImage = (title: string, avatar: string) => avatar;

const difficultyColor: Record<string, string> = {
    Easy:   '#9acd32',
    Medium: '#f39c12',
    Hard:   '#e74c3c',
    Insane: '#ffffff',
};

const statusColors: Record<string, { bg: string, text: string }> = {
    "PWNED":      { bg: "#9acd32", text: "#000" },
    "USER PWNED": { bg: "#f39c12", text: "#000" },
    "NOT PWNED":  { bg: "#3e444d", text: "#fff" }
};
---
<html lang="pt">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <title>Diogo Couto | Cyber Security Engineer</title>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&family=Syne:wght@800&display=swap');

            * {
                box-sizing: border-box;
            }

            body {
                margin: 0;
                background-color: #0d0d0d;
                color: #fff;
                font-family: 'Syne', sans-serif;
                overflow-x: hidden;
                cursor: none;
                position: relative;
                width: 100%;
            }

            /* Esconder barra de scroll em tudo e para sempre */
            * {
                scrollbar-width: none !important;
                -ms-overflow-style: none !important;
            }
            *::-webkit-scrollbar {
                display: none !important;
            }

            html, body {
                overflow-x: hidden;
                width: 100%;
                margin: 0;
                padding: 0;
            }


            /* Noise Dinâmico (Textura de monitor) agora no GlobalEffects.astro */

            /* --- HERO & GLITCH --- */
            .hero-main {
                height: 100vh;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
                position: relative; /* Adicionado para o scroll-indicator ser relativo a esta secção */
            }

            h1 { 
                font-size: clamp(3.5rem, 12vw, 28vh); 
                line-height: 0.9;
                margin: 0;
                text-align: center;
                position: relative;
                color: #fff;
                text-shadow: 2px 2px 0px rgba(255,255,255,0.1), 4px 4px 0px rgba(0,0,0,1);
                width: 100%;
                max-width: 100vw;
            }

            h1::before, h1::after {
                content: "DIOGO\A COUTO";
                white-space: pre;
                position: absolute;
                top: 0; left: 0;
                width: 100%; height: 100%;
                opacity: 0;
                pointer-events: none;
            }

            h1::before { color: #00ffff; z-index: -1; }
            h1::after { color: #ff00ff; z-index: -2; }

            .glitch-active::before {
                opacity: 0.7;
                animation: rgb-split-1 0.1s infinite alternate-reverse;
            }
            .glitch-active::after {
                opacity: 0.7;
                animation: rgb-split-2 0.1s infinite alternate;
            }

            @keyframes rgb-split-1 {
                0% { transform: translate(-6px, -2px); }
                100% { transform: translate(6px, 2px); }
            }

            @keyframes rgb-split-2 {
                0% { transform: translate(6px, 2px); }
                100% { transform: translate(-6px, -2px); }
            }

            /* --- LAYOUT & DETAILS --- */
            .tech-details {
                font-family: 'JetBrains Mono', monospace;
                font-size: clamp(0.6rem, 0.9vw, 0.8rem);
                text-transform: uppercase;
                letter-spacing: clamp(0.05em, 0.15vw, 0.22em);
                position: absolute;
                width: 94%;
                left: 3%;
                display: flex;
                justify-content: space-between;
                align-items: center;
                top: 5vh;
                z-index: 10;
                white-space: nowrap;
            }

            .status-decrypting { color: #ff4d4d; animation: pulse-red 1.5s infinite; }
            .status-secured { color: #00ff41; text-shadow: 0 0 8px rgba(0, 255, 65, 0.5); }

            @keyframes pulse-red { 0%, 100% { opacity: 1; } 50% { opacity: 0.4; } }

            /* Cursor Follower agora no GlobalEffects.astro */

            .boot-progress-bar {
                position: fixed;
                top: 0;
                left: 0;
                width: 0%;
                height: 2px;
                background: #ff4d4d;
                z-index: 10001;
                transition: background 0.5s;
            }

            .boot-progress-bar.loaded {
                background: #00ff41;
            }

            .scroll-indicator-label {
                font-family: 'JetBrains Mono', monospace;
                font-size: clamp(0.55rem, 0.8vw, 0.7rem);
                letter-spacing: 0.1em;
                margin-left: clamp(8px, 1.5vw, 20px);
                padding: 1px clamp(4px, 0.8vw, 8px);
                border: 1px solid currentColor;
                opacity: 0.8;
                display: inline-block;
            }

            section { 
                width: 100%; 
                position: relative; 
                display: flex; 
                flex-direction: column; 
                align-items: center; 
                overflow-x: hidden; 
                padding: 10vh 0;
                box-sizing: border-box;
            }
            .cap-1 { min-height: 110vh; background-color: transparent; padding: 0; }
            .cap-2, .cap-htb, .cap-4 { 
                min-height: 100vh; 
                background-color: transparent; 
                justify-content: center;
                gap: 5vh;
            }
            section h2 {
                font-size: clamp(2.5rem, 10vw, 8rem);
                margin: 0 0 5vh 0;
                text-align: center;
                color: #fff;
                font-weight: 800;
                text-transform: uppercase;
                letter-spacing: -0.02em;
            }

            .sub-info { font-family: 'JetBrains Mono', monospace; font-size: 0.9rem; margin-top: 20px; color: #fff; opacity: 0.6; }
            .content-block { width: 100%; max-width: 1200px; padding: 10vh 5vw 30vh 5vw; box-sizing: border-box; }
            .biography { font-size: 2.5rem; line-height: 1.2; max-width: 800px; }
            .biography span { color: #555; transition: color 0.5s; }
            .biography span:hover { color: #fff; }

            .sticky-bar {
                position: absolute; 
                bottom: 0; 
                left: 0; 
                width: 100%; 
                height: 50px;
                background: linear-gradient(180deg, rgba(10, 10, 10, 0) 0%, rgba(10, 10, 10, 1) 100%);
                backdrop-filter: blur(10px);
                border-top: 1px solid rgba(0, 255, 65, 0.4);
                display: flex; 
                align-items: center; 
                justify-content: center; 
                z-index: 100;
                overflow: hidden;
            }
            
            .sticky-bar::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 1px;
                background: linear-gradient(90deg, transparent, #00ff41, transparent);
                opacity: 0.3;
            }

            .is-locked { 
                position: fixed; 
                bottom: auto; 
                background: #0d0d0d !important; /* Totalmente opaco para tapar o que está atrás */
                border-bottom: 1px solid rgba(0, 255, 65, 0.1);
                box-shadow: 0 10px 30px rgba(0,0,0,0.8);
            }

            .nav-button {
                background: rgba(0, 255, 65, 0.03); 
                border: 1px solid rgba(0, 255, 65, 0.1); 
                color: #00ff41; 
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.6rem; 
                padding: 6px 16px;
                border-radius: 2px;
                letter-spacing: 0.2em; 
                text-transform: uppercase;
                display: flex; 
                align-items: center; 
                gap: 12px; 
                opacity: 0; 
                transition: all 0.4s; 
                cursor: pointer;
            }

            .nav-button:hover {
                background: rgba(0, 255, 64, 0.1);
                border-color: #00ff41;
                color: #fff;
                box-shadow: 0 0 15px rgba(0, 255, 65, 0.2);
            }

            .is-locked .nav-button { opacity: 0.8; }
            .is-locked .nav-button:hover { opacity: 1; }
            
            .sticky-meta {
                position: absolute;
                left: 20px;
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.5rem;
                color: #00ff41;
                opacity: 0.4;
                text-transform: uppercase;
                letter-spacing: 0.1em;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            @media (max-width: 768px) {
                .sticky-meta { display: none; }
            }

            .arrow-up { 
                width: 5px; 
                height: 5px; 
                border-left: 1.5px solid currentColor; 
                border-top: 1.5px solid currentColor; 
                transform: rotate(45deg); 
            }

            body.scroll-locked {
                overflow: hidden !important;
                height: 100vh;
                overscroll-behavior: none;
            }

			.biography-container {
			    display: flex;
			    flex-direction: column;
			    align-items: flex-start;
			    gap: 20px;
			    width: 100%;
			}

			.bio-freeze-section {
                height: 220vh; /* Reduzido para scroll mais rápido */
                background: transparent;
                width: 100%;
                position: relative;
                z-index: 5;
            }

            .bio-content-pin {
                height: 100dvh; /* Usa dynamic viewport height */
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 20px;
                box-sizing: border-box;
                position: relative;
            }

            .bio-row {
                display: flex;
                justify-content: center;
                gap: 2vw;
                margin: 0.2em 0;
            }

            .bio-word {
                font-size: clamp(3rem, 12vw, 12rem); /* Fonte significativamente maior */
                font-weight: 800;
                color: #fff;
                opacity: 0;
                letter-spacing: -0.01em;
                line-height: 1.2;
                white-space: nowrap;
                text-transform: uppercase;
            }

            .bio-word span {
                color: #fff;
                text-shadow: 0 0 50px rgba(255,255,255,0.4);
            }

            /* --- PHOTO & CONSOLE --- */
            .bio-top-grid {
                display: grid;
                grid-template-columns: 1fr 1.5fr;
                gap: clamp(40px, 8vw, 120px); 
                width: 100%;
                margin-bottom: 2vh; /* Reduzido de 5vh para dar espaço ao texto */
                align-items: center;
            }

            @media (max-width: 1024px) {
                .bio-top-grid {
                    gap: 50px;
                }
                .bio-content-pin {
                    transform: translateY(-5vh); /* Menos agressivo */
                }
            }

            @media (max-width: 768px) {
                .bio-top-grid {
                    grid-template-columns: 1fr;
                    gap: 10px; /* Reduzido */
                    margin-bottom: 20px; /* Reduzido */
                    width: 100%;
                    max-width: 280px; /* Mais compacto */
                }
                .bio-content-pin {
                    transform: none !important;
                    padding: 8vh 20px 50px; /* Mais perto do separador */
                    justify-content: center;
                    gap: 10px;
                }
                .bio-row {
                    gap: 1.5vw; /* Menos espaço entre as palavras para caber tudo */
                    width: 100%;
                    justify-content: center;
                }
                .bio-word {
                    font-size: clamp(1.5rem, 9.5vw, 4rem); /* Ajustado para caber no ecrã sem cortar */
                    margin-bottom: 5px;
                }
                .bio-freeze-section {
                    height: 250dvh !important;
                }
            }

            /* Fix para telemóveis com ecrãs curtos (ex: barras do browser abertas) */
            @media (max-width: 768px) and (max-height: 650px) {
                .bio-top-grid { margin-bottom: 5px; gap: 5px; }
                .photo-placeholder { width: 60px; }
                .bio-console { min-height: 100px; max-height: 25dvh; }
                .bio-word { font-size: 1.3rem; }
            }

            @media (max-width: 900px) and (max-height: 500px) {
                .bio-top-grid {
                    grid-template-columns: 1fr 1fr;
                    gap: 20px;
                    margin-bottom: 10px;
                    max-width: 600px;
                }
                .photo-placeholder {
                    width: 80px;
                    height: 100px;
                }
                .bio-console {
                    height: 100px;
                    padding: 8px;
                }
                .console-text {
                    font-size: 0.65rem;
                }
                .bio-word {
                    font-size: 1.8rem;
                }
                .bio-content-pin {
                    padding: 10px;
                }
            }

            .photo-placeholder {
                width: 100%;
                aspect-ratio: 4/5;
                background: rgba(255, 255, 255, 0.03);
                border: 1px solid rgba(255, 255, 255, 0.1);
                position: relative;
                overflow: hidden;
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 0; /* Começa escondido */
            }

            .photo-placeholder img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                opacity: 0.8;
                filter: grayscale(100%) contrast(1.2);
            }

            .photo-placeholder:hover img {
                opacity: 1;
                filter: grayscale(0%) contrast(1);
            }

            .photo-placeholder::after {
                content: "";
            }

            .bio-console {
                background: rgba(0, 0, 0, 0.8);
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 4px;
                font-family: 'JetBrains Mono', monospace;
                padding: 15px;
                height: 250px;
                display: flex;
                flex-direction: column;
                position: relative;
                opacity: 0; /* Começa escondido */
            }

            .console-header {
                display: flex;
                gap: 6px;
                margin-bottom: 12px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
                padding-bottom: 8px;
            }

            .dot { width: 8px; height: 8px; border-radius: 50%; background: #333; }
            .dot.red { background: #ff5f56; }
            .dot.yellow { background: #ffbd2e; }
            .dot.green { background: #27c93f; }

            .console-text {
                font-size: 0.9rem;
                line-height: 1.5;
                color: #00ff41;
                text-shadow: 0 0 5px rgba(0, 255, 65, 0.2);
            }

            .cursor-blink {
                display: inline-block;
                width: 8px;
                height: 15px;
                background: #00ff41;
                margin-left: 4px;
                animation: blink 1s step-end infinite;
            }

            @keyframes blink { 50% { opacity: 0; } }

			/* Contentor específico para a figura 3D */
			.canvas-wrapper {
			    width: 100%;
			    height: 850px;
			    position: relative;
			    z-index: 50; /* Garantir que está acima de elementos da Bio */
			    overflow: visible;
                pointer-events: auto;
			}

            @media (max-width: 768px) {
                .canvas-wrapper {
                    height: 50vh;
                    max-height: 400px;
                }
            }

			/* Garante que o container interno acompanhe */
			#three-canvas-container {
			    width: 100%;
			    height: 100%;
			    cursor: grab;
			}

			#three-canvas-container:active {
			    cursor: grabbing;
			}
			/* --- HTB SECTION --- */
			.cap-htb { 
                background-color: transparent;
                padding-top: 5vh;
            }

			.htb-intro {
				font-family: 'JetBrains Mono', monospace;
				font-size: 1rem;
				opacity: 0.6;
				margin-bottom: 50px;
				max-width: 600px;
				text-align: center;
				line-height: 1.6;
			}

			.htb-title {
				font-size: 7.5vw !important; /* Ligeiramente reduzido para não transbordar */
				margin-bottom: 2vh;
				text-align: center;
				color: #fff;
				text-transform: uppercase;
				letter-spacing: -0.02em;
                width: 100%;
                max-width: 100vw;
                overflow: hidden;
                white-space: nowrap;
                display: block;
			}

			.htb-grid {
				display: flex;
				justify-content: center;
				width: 100%;
				max-width: 1400px;
                z-index: 10;
                position: relative;
                pointer-events: auto;
			}

			.htb-card {
				background: rgba(255, 255, 255, 0.05);
				border: 1px solid rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(12px);
				border-radius: 4px;
				padding: 40px;
				position: relative;
				overflow: hidden;
				display: grid;
				grid-template-columns: 1.2fr 1fr;
                grid-template-rows: 1fr auto;
                grid-template-areas: 
                    "info chart"
                    "btn chart";
				gap: 40px;
				transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                max-width: 900px;
                width: 100%;
                opacity: 1 !important;
			}

            @media (max-width: 768px) {
                .htb-title {
                    font-size: 12vw !important;
                    white-space: normal;
                    line-height: 1;
                }
                .cap-htb {
                    padding: 80px 4vw;
                }
            }

			.htb-card:hover {
				background: rgba(255, 255, 255, 0.08);
				border-color: #9acd32;
				transform: translateY(-5px);
			}

            .htb-card-info {
                grid-area: info;
				display: flex;
				flex-direction: column;
				gap: 15px;
			}

			.htb-machine-header {
				display: flex;
				align-items: center;
				gap: 15px;
			}

			.htb-machine-avatar {
				width: 64px;
				height: 64px;
				border-radius: 50%;
				border: 1px solid #9acd32;
				padding: 2px;
			}

			.htb-machine-name {
				font-size: 1.8rem;
				font-weight: 800;
				margin: 0;
			}

			.htb-machine-meta {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.7rem;
				opacity: 0.6;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				display: flex;
				flex-direction: column;
				gap: 5px;
			}

			.htb-machine-meta span b {
				color: #9acd32;
			}

			.htb-description {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.8rem;
				line-height: 1.6;
				opacity: 0.8;
				margin-top: 10px;
			}

            .diff-badge {
				display: inline-block;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.6rem;
				padding: 2px 8px;
				border-radius: 2px;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.1em;
                border: 1px solid;
                width: fit-content;
                border: 1px solid rgba(154, 205, 50, 0.3);
                background: rgba(154, 205, 50, 0.05);
                margin-top: 4px;
			}

            .status-badge {
				display: inline-block;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.6rem;
				padding: 2px 8px;
				border-radius: 2px;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.1em;
                margin-top: 4px;
                margin-left: 8px;
			}

			.htb-chart-wrapper {
                grid-area: chart;
				position: relative;
				width: 100%;
				height: 100%;
				display: flex;
				align-items: center;
				justify-content: center;
			}

			.htb-view-btn {
                grid-area: btn;
				margin-top: 20px;
				padding: 10px 20px;
				background: transparent;
				border: 1px solid rgba(255, 255, 255, 0.2);
				color: #fff;
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.6rem;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				cursor: pointer;
				transition: all 0.3s;
				text-align: center;
				text-decoration: none;
				width: fit-content;
                cursor: none;
                pointer-events: auto;
                position: relative;
                z-index: 20;
                align-self: end;
			}

			.htb-view-btn:hover {
				background: #9acd32;
				color: #000;
				border-color: #9acd32;
			}

            .htb-archive-btn {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-decoration: none;
                padding: 15px 40px;
                background: rgba(154, 205, 50, 0.05);
                border: 1px solid rgba(154, 205, 50, 0.3);
                position: relative;
                overflow: hidden;
                transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                z-index: 5;
                pointer-events: auto;
                cursor: none;
            }

            .htb-archive-btn .btn-text {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.8rem;
                color: #9acd32;
                letter-spacing: 0.4em;
                z-index: 2;
                position: relative;
            }

            .htb-archive-btn::before {
                content: '';
                position: absolute;
                top: 0; left: -100%;
                width: 100%; height: 100%;
                background: linear-gradient(90deg, transparent, rgba(154, 205, 50, 0.2), transparent);
                transition: 0.5s;
                z-index: 1;
            }

            .htb-archive-btn:hover {
                background: rgba(154, 205, 50, 0.15);
                border-color: #9acd32;
                transform: translateY(-2px);
                box-shadow: 0 0 20px rgba(154, 205, 50, 0.2);
            }

            .htb-archive-btn:hover::before {
                left: 100%;
            }

            .htb-archive-btn:active {
                transform: translateY(0);
            }

			@media (max-width: 900px) {
				.htb-card {
					display: flex;
                    flex-direction: column;
                    padding: 30px;
                    gap: 30px;
                    background-size: 20px 20px;
				}
                .htb-card-info { order: 1; }
				.htb-chart-wrapper {
					aspect-ratio: 1;
                    order: 2;
				}
                .htb-view-btn {
                    order: 3;
                    width: 100%;
                    margin-top: 0;
                }
			}

            .scroll-indicator {
                position: absolute;
                bottom: 30px;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 8px;
                z-index: 9999; /* Forçar para a frente de tudo */
                opacity: 0;
                visibility: hidden;
                transition: opacity 1s ease, transform 1s ease, visibility 1s;
                pointer-events: none;
            }

            .scroll-indicator.visible {
                opacity: 1;
                visibility: visible;
                transform: translateX(-50%) translateY(0);
            }

            .scroll-indicator.hidden {
                opacity: 0;
                visibility: hidden;
                transform: translateX(-50%) translateY(20px);
            }

            .chevron-container {
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 4px;
            }

            .chevron {
                width: 14px;
                height: 8px;
                border-left: 2px solid #00ff41;
                border-bottom: 2px solid #00ff41;
                transform: rotate(-45deg);
                opacity: 0;
                animation: chevron-pulse 2s infinite ease-in-out;
                filter: drop-shadow(0 0 5px rgba(0, 255, 65, 0.4));
            }

            .chevron:nth-child(2) { animation-delay: 0.2s; }
            .chevron:nth-child(3) { animation-delay: 0.4s; }

            @keyframes chevron-pulse {
                0% { opacity: 0; transform: rotate(-45deg) translate(5px, -5px); }
                40% { opacity: 1; }
                80% { opacity: 0; transform: rotate(-45deg) translate(-5px, 5px); }
                100% { opacity: 0; }
            }

            .scroll-label-glitch {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.6rem;
                letter-spacing: 0.4em;
                color: #00ff41;
                text-transform: uppercase;
                margin-top: 10px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .scroll-label-glitch::before, .scroll-label-glitch::after {
                content: '[';
                opacity: 0.4;
            }
            .scroll-label-glitch::after { content: ']'; }

            .scan-line-scroll {
                position: absolute;
                bottom: -20px;
                width: 100px;
                height: 1px;
                background: linear-gradient(90deg, transparent, #00ff41, transparent);
                animation: scan-width 3s infinite ease-in-out;
                opacity: 0.3;
            }

            @keyframes scan-width {
                0%, 100% { transform: scaleX(0.5); opacity: 0.1; }
                50% { transform: scaleX(1.5); opacity: 0.5; }
            }

            /* --- SCROLL LOCK INDICATOR --- */
            .scroll-lock-indicator {
                position: absolute;
                bottom: 30px;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 12px;
                z-index: 9999;
                opacity: 0;
                visibility: hidden;
                transition: all 0.5s ease;
            }

            .scroll-lock-indicator.visible {
                opacity: 1;
                visibility: visible;
            }

            .lock-icon-container {
                position: relative;
                width: 30px;
                height: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .lock-circle {
                position: absolute;
                width: 100%;
                height: 100%;
                border: 2px solid #ff4d4d;
                border-radius: 50%;
                border-top-color: transparent;
                animation: spin 1s linear infinite;
            }

            .lock-core {
                width: 6px;
                height: 6px;
                background: #ff4d4d;
                border-radius: 50%;
                animation: pulse-red-minimal 1s infinite;
            }

            @keyframes spin { 100% { transform: rotate(360deg); } }
            @keyframes pulse-red-minimal { 0%, 100% { opacity: 1; transform: scale(1); } 50% { opacity: 0.5; transform: scale(0.8); } }

            .lock-text {
                font-family: 'JetBrains Mono', monospace;
                font-size: 0.6rem;
                letter-spacing: 0.3em;
                color: #ff4d4d;
                text-transform: uppercase;
                background: rgba(255, 77, 77, 0.1);
                padding: 4px 12px;
                border-radius: 2px;
                border: 1px solid rgba(255, 77, 77, 0.3);
                white-space: nowrap;
            }
        </style>
    </head>
    <body>
        <GlobalEffects />

        <main>
            <div class="boot-progress-bar" id="boot-bar"></div>
            <section id="cap1" class="cap-1">
                <div class="tech-details">
                    <div style="display: flex; align-items: center;">
                        <span id="status-line" class="status-decrypting">STATUS: DECRYPTING_</span>
                        <span id="scroll-status" class="scroll-indicator-label status-decrypting">SCROLL_LOCKED</span>
                    </div>
                    <span id="coords-line" data-value="LOC: 38.6607° N, 9.2035° W">LOC: XX.XXXX° X, X.XXXX° X</span>
                </div>

                <div class="hero-main">
                    <h1 id="hero-title" data-value="DIOGO COUTO">XXXXX<br/>XXXXX</h1>
                    <p class="sub-info" id="sub-info" data-value="[ Computer Science & Cyber Security ]">[ XXXXXXXX XXXXXXX & XXXXX XXXXXXXX ]</p>
                    
                    <div class="scroll-indicator" id="scroll-indicator">
                        <div class="chevron-container">
                            <div class="chevron"></div>
                            <div class="chevron"></div>
                            <div class="chevron"></div>
                        </div>
                        <span class="scroll-label-glitch">DESCEND_TO_BIO</span>
                        <div class="scan-line-scroll"></div>
                    </div>

                    <div class="scroll-lock-indicator" id="scroll-lock-indicator">
                        <div class="lock-icon-container">
                            <div class="lock-circle"></div>
                            <div class="lock-core"></div>
                        </div>
                        <span class="lock-text">SCROLL_LOCKED: INITIALIZING_SYSTEM</span>
                    </div>
                </div>

				<div class="bio-freeze-section" id="bio-trigger">
                    <div class="bio-content-pin">
                        <div class="bio-top-grid">
                            <div class="photo-placeholder" id="bio-photo">
                                <Image src={profileImage} alt="Diogo Couto" width={500} height={625} />
                            </div>
                            <div class="bio-console" id="bio-console">
                                <div class="console-header">
                                    <div class="dot red"></div>
                                    <div class="dot yellow"></div>
                                    <div class="dot green"></div>
                                    <span style="font-size: 0.6rem; opacity: 0.4; margin-left: 10px;">identity_v2.terminal</span>
                                </div>
                                <div class="console-text" id="console-typing-area">
                                    <span id="typed-text"></span><span class="cursor-blink"></span>
                                </div>
                            </div>
                        </div>
                        <div class="bio-row">
                            <span class="bio-word">WHO</span>
                            <span class="bio-word">AM</span>
                            <span class="bio-word">I?</span>
                        </div>
                    </div>
                </div> 

                <div class="sticky-bar" data-target="#cap1">
                    <div class="sticky-meta">
                        <span>0x00_ROOT</span>
                        <div style="width: 30px; height: 1px; background: currentColor; opacity: 0.3;"></div>
                        <span>SYS_ID: 1001</span>
                    </div>
                    <button class="nav-button"><div class="arrow-up"></div><span>Return_Home</span></button>
                </div>
            </section>

            <section id="cap2" class="cap-2">
                <h2>PROJECTS</h2>

                <div class="sticky-bar" data-target="#cap2">
                    <div class="sticky-meta">
                        <span>0x01_PROJ</span>
                        <div style="width: 30px; height: 1px; background: currentColor; opacity: 0.3;"></div>
                        <span>STATUS: ACTIVE</span>
                    </div>
                    <button class="nav-button"><div class="arrow-up"></div><span>View_Projects</span></button>
                </div>
            </section>

            <section id="cap3" class="cap-htb">
                <h2 class="htb-title">HACK THE BOX</h2>
                <div style="display: flex; flex-direction: column; align-items: center; gap: 15px; margin-top: -20px; margin-bottom: 40px;">
                    <p class="htb-intro" style="margin: 0;">Este é o meu thought process de como dou exploit às máquinas do Hack The Box.</p>
                    <span style="font-family: 'JetBrains Mono', monospace; font-size: 0.7rem; color: #9acd32; letter-spacing: 0.3em; opacity: 0.8;">[ LATEST_PWN_LOG ]</span>
                </div>
                
                <div style="display: flex; flex-direction: column; gap: 40px; align-items: center; width: 100%; max-width: 1000px; margin: 0 auto;">
                    {displayMachines.map((machine) => (
                        <div class="htb-grid" style="width: 100%; display: flex; justify-content: center;">
                            <div class="htb-card">
                                <div class="htb-card-info">
                                    <div class="htb-machine-header">
                                        <Image src={getMachineImage(machine.title, machine.avatar) as any} alt={machine.title} class="htb-machine-avatar" width={64} height={64} />
                                        <div>
                                            <h3 class="htb-machine-name">{machine.title}</h3>
                                            <span class="diff-badge" style={`color: ${difficultyColor[machine.difficulty]}; border-color: ${difficultyColor[machine.difficulty]}; background: ${difficultyColor[machine.difficulty]}18`}>
                                                {machine.difficulty}
                                            </span>
                                            {machine.status && (
                                                <span class="status-badge" style={`background: ${statusColors[machine.status]?.bg || '#9acd32'}; color: ${statusColors[machine.status]?.text || '#000'}`}>
                                                    {machine.status}
                                                </span>
                                            )}
                                        </div>
                                    </div>
                                    <div class="htb-machine-meta">
                                        <span><b>OS:</b> {machine.os}</span>
                                        <span><b>Difficulty:</b> {machine.difficulty}</span>
                                        <span><b>Pwned:</b> {machine.pwnedDate}</span>
                                    </div>
                                    <p class="htb-description">{machine.description || 'Descobre os passos e a lógica que utilizei para dominar esta máquina.'}</p>
                                </div>
                                <div class="htb-chart-wrapper">
                                    <canvas id={`chart-${machine.title.toLowerCase()}`} 
                                            data-matrix={JSON.stringify(machine.matrix)}></canvas>
                                </div>
                                <a href={`/htb/${machine.id}`} class="htb-view-btn">Ler Writeup</a>
                            </div>
                        </div>
                    ))}
                    
                    <a href="/htb" class="htb-archive-btn" style="margin-top: 20px; cursor: none;">
                        <span class="btn-glitch"></span>
                        <span class="btn-text">EXE::SEE_FULL_ARCHIVE.SH</span>
                    </a>
                </div>

                <div class="sticky-bar" data-target="#cap3">
                    <div class="sticky-meta">
                        <span>0x02_HTB</span>
                        <div style="width: 30px; height: 1px; background: currentColor; opacity: 0.3;"></div>
                        <span>PWN_LOG: SYNC</span>
                    </div>
                    <button class="nav-button"><div class="arrow-up"></div><span>Security_Log</span></button>
                </div>
            </section>

            <section id="cap4" class="cap-4">
                <h2>CONTACT</h2>
                <div class="sticky-bar" data-target="#cap4">
                    <div class="sticky-meta">
                        <span>0x03_COMM</span>
                        <div style="width: 30px; height: 1px; background: currentColor; opacity: 0.3;"></div>
                        <span>CHAN: ENCRYPTED</span>
                    </div>
                    <button class="nav-button"><div class="arrow-up"></div><span>Send_Signal</span></button>
                </div>
            </section>
        </main>

        <script>
            import gsap from 'gsap';
            import { ScrollTrigger } from 'gsap/ScrollTrigger';
            import Chart from 'chart.js/auto';
            gsap.registerPlugin(ScrollTrigger);

            const lenis = (window as any).lenis;
            
            // Sincroniza o ScrollTrigger com o Lenis
            if ((window as any).lenis) {
                (window as any).lenis.on('scroll', ScrollTrigger.update);
            }

            const heroTitle = document.getElementById('hero-title') as HTMLElement;
            const heroSubtitle = document.getElementById('sub-info') as HTMLElement;
            const statusEl = document.getElementById('status-line') as HTMLElement;
            const coordsEl = document.getElementById('coords-line') as HTMLElement;

            function triggerRandomGlitch() {
                if (!heroTitle) return;
                heroTitle.classList.add('glitch-active');
                const glitchDuration = Math.random() * 200 + 100; 
                setTimeout(() => {
                    heroTitle.classList.remove('glitch-active');
                    const nextGlitchIn = Math.random() * 3600 + 400;
                    setTimeout(triggerRandomGlitch, nextGlitchIn);
                }, glitchDuration);
            }

            const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%&*";

            const initHTBCharts = () => {
                const canvases = document.querySelectorAll('canvas[id^="chart-"]');
                canvases.forEach((canvas) => {
                    const ctx = (canvas as HTMLCanvasElement).getContext('2d');
                    if (!ctx) return;

                    const matrixData = JSON.parse((canvas as HTMLElement).dataset.matrix || '{}');
                    
                    new Chart(ctx, {
                        type: 'radar',
                        data: {
                            labels: ['ENUM', 'REAL', 'CVE', 'CUSTOM', 'CTF'],
                            datasets: [{
                                label: 'Machine Matrix',
                                data: [
                                    matrixData.ENUM,
                                    matrixData.REAL,
                                    matrixData.CVE,
                                    matrixData.CUSTOM,
                                    matrixData.CTF
                                ],
                                    backgroundColor: 'rgba(154, 205, 50, 0.15)',
                                    borderColor: '#9acd32',
                                    pointBackgroundColor: '#9acd32',
                                    pointBorderColor: '#fff',
                                    pointBorderWidth: 1,
                                    pointRadius: 2,
                                    borderWidth: 2,
                                    fill: true,
                                }]
                            },
                            options: {
                                animation: false,
                                scales: {
                                    r: {
                                        angleLines: { color: 'rgba(255, 255, 255, 0.1)' },
                                        grid: { color: 'rgba(255, 255, 255, 0.1)' },
                                        pointLabels: {
                                            color: 'rgba(255, 255, 255, 0.7)',
                                        font: {
                                            family: 'JetBrains Mono',
                                            size: 8
                                        }
                                    },
                                    ticks: {
                                        display: false,
                                        stepSize: 20
                                    },
                                    suggestedMin: 0,
                                    suggestedMax: 100
                                }
                            },
                            plugins: {
                                legend: { display: false },
                                tooltip: { enabled: false }
                            },
                            responsive: true,
                            maintainAspectRatio: false
                        }
                    });
                });
            };

            async function decryptElement(el: HTMLElement) {
                if (!el) return;
                let iteration = 0;
                const finalValue = el.dataset.value || "";
                const isTitle = el.id === 'hero-title';
                
                return new Promise<void>((resolve) => {
                    const interval = setInterval(() => {
                        let text = finalValue.split("").map((l, i) => 
                            i < iteration ? finalValue[i] : letters[Math.floor(Math.random() * letters.length)]
                        ).join("");
                        
                        if (isTitle) {
                            // Mantém o break line para o título
                            const part1 = text.substring(0, 5);
                            const part2 = text.substring(5).trim();
                            el.innerHTML = `${part1}<br/>${part2}`;
                        } else {
                            el.innerText = text;
                        }

                        if(iteration >= finalValue.length) { 
                            clearInterval(interval); 
                            resolve(); 
                        }
                        iteration += 1/3;
                    }, 40);
                });
            }

            async function updateStatus() {
                const prefix = "STATUS: ";
                const oldT = "DECRYPTING_";
                const newT = "SECURED_";
                for (let i = oldT.length; i >= 0; i--) {
                    statusEl.innerText = prefix + oldT.substring(0, i);
                    await new Promise(r => setTimeout(r, 60));
                }
                for (let i = 0; i <= newT.length; i++) {
                    statusEl.innerText = prefix + newT.substring(0, i);
                    await new Promise(r => setTimeout(r, 80));
                }
                statusEl.classList.replace('status-decrypting', 'status-secured');
                
                // Sincronização imediata da barra e do status de scroll
                const bootBar = document.getElementById('boot-bar');
                const scrollStatusLine = document.getElementById('scroll-status');
                if (bootBar) bootBar.classList.add('loaded');
                if (scrollStatusLine) {
                    scrollStatusLine.innerText = "ACCESS_GRANTED";
                    scrollStatusLine.classList.replace('status-decrypting', 'status-secured');
                }
            }

            window.addEventListener('load', async () => {
                // --- INITIAL STATE SETUP --- 
                if ('scrollRestoration' in history) {
                    history.scrollRestoration = 'manual';
                }
                if ((window as any).lenis) (window as any).lenis.scrollTo(0, { immediate: true });

                const words = document.querySelectorAll('.bio-word');
                const photo = document.getElementById('bio-photo');
                const consoleEl = document.getElementById('bio-console');
                const typedTextEl = document.getElementById('typed-text');
                
                const bioMessage = "CS student driven by cybersecurity and the art of pentesting. I don’t just write code; I look for the cracks in it. From deep-dive reconnaissance to final exploitation, I thrive on the challenge of outsmarting the system. Let's hack.";

                gsap.set(words, { y: "100vh", opacity: 0 });
                gsap.set(photo, { x: "-100vw", opacity: 0 });
                gsap.set(consoleEl, { x: "100vw", opacity: 0 });

                const bootBar = document.getElementById('boot-bar');
                const scrollStatusLine = document.getElementById('scroll-status');
                const scrollIndicator = document.getElementById('scroll-indicator');
                const scrollLockIndicator = document.getElementById('scroll-lock-indicator');

                // --- SKIP ANIMATION SE JÁ VIU (ex: voltou de /htb) ---
                const alreadyBooted = sessionStorage.getItem('boot_done');

                if (alreadyBooted) {
                    // Salta diretamente para o estado final
                    if (heroTitle) heroTitle.dataset.value && (heroTitle.innerHTML = `DIOGO<br/>COUTO`);
                    if (heroSubtitle) heroSubtitle.innerText = heroSubtitle.dataset.value || '';
                    if (coordsEl) coordsEl.innerText = coordsEl.dataset.value || '';
                    if (statusEl) {
                        statusEl.innerText = 'STATUS: SECURED_';
                        statusEl.classList.replace('status-decrypting', 'status-secured');
                    }
                    if (bootBar) { bootBar.style.width = '100%'; bootBar.classList.add('loaded'); }
                    if (scrollStatusLine) {
                        scrollStatusLine.innerText = 'ACCESS_GRANTED';
                        scrollStatusLine.classList.replace('status-decrypting', 'status-secured');
                    }
                    if ((window as any).lenis) (window as any).lenis.start();

                    if (scrollIndicator) scrollIndicator.classList.add('visible');
                    if (scrollLockIndicator) scrollLockIndicator.classList.remove('visible');

                    triggerRandomGlitch();
                } else {
                    // Primeira visita — faz a animação completa
                    if ((window as any).lenis) (window as any).lenis.stop();
                    document.body.classList.add('scroll-locked');
                    
                    if (scrollLockIndicator) scrollLockIndicator.classList.add('visible');

                    const preventScroll = (e: Event) => {
                        e.preventDefault();
                        e.stopPropagation();
                        return false;
                    };

                    const blockKeys = (e: KeyboardEvent) => {
                        const keys = ['ArrowUp', 'ArrowDown', 'Space', ' ', 'PageUp', 'PageDown', 'Home', 'End'];
                        if (keys.includes(e.key)) {
                            e.preventDefault();
                            return false;
                        }
                    };

                    window.addEventListener('wheel', preventScroll, { passive: false });
                    window.addEventListener('touchmove', preventScroll, { passive: false });
                    window.addEventListener('keydown', blockKeys, { passive: false });

                    // Animação da barra de progresso (fingida até 95%)
                    const barTween = gsap.to(bootBar, { width: "100%", duration: 5.5, ease: "power1.inOut" });

                    // Agora sim, arrancamos com as animações de texto da Hero
                    await Promise.all([
                        decryptElement(coordsEl),
                        decryptElement(heroTitle),
                        decryptElement(heroSubtitle)
                    ]);
                    await updateStatus();
                    
                    // Desbloquear scroll
                    barTween.kill();
                    if (bootBar) bootBar.style.width = "100%";
                    
                    window.removeEventListener('wheel', preventScroll);
                    window.removeEventListener('touchmove', preventScroll);
                    window.removeEventListener('keydown', blockKeys);
                    document.body.classList.remove('scroll-locked');
                    
                    if ((window as any).lenis) (window as any).lenis.start();
                    
                    if (scrollLockIndicator) {
                        scrollLockIndicator.style.opacity = '0';
                        setTimeout(() => {
                            scrollLockIndicator.classList.remove('visible');
                            if (scrollIndicator) scrollIndicator.classList.add('visible');
                        }, 500);
                    } else {
                        if (scrollIndicator) scrollIndicator.classList.add('visible');
                    }

                    triggerRandomGlitch();

                    // Marcar como já visto para esta sessão
                    sessionStorage.setItem('boot_done', '1');
                }

                // --- ANIMATION: BIO FREEZE REVEAL ---
                const isMobile = window.innerWidth <= 768;

                const tl = gsap.timeline({
                    scrollTrigger: {
                        trigger: "#bio-trigger",
                        start: "top top", 
                        end: isMobile ? "+=1600" : "+=2000", 
                        pin: true,
                        scrub: 0.6,
                    }
                });

                // 1. Entrada Relâmpago (0.0 -> 1.0)
                tl.to([photo, consoleEl], {
                    x: 0,
                    opacity: 1,
                    duration: 1,
                    ease: "power2.out"
                }, 0);

                // 2. Palavras entram quase em simultâneo (0.2 -> 1.0)
                tl.to(words, {
                    y: 0,
                    opacity: 1,
                    stagger: 0.05,
                    ease: "back.out(1.7)",
                    duration: 0.8
                }, 0.2);

                // 3. Typewriter acelerado (0.4 -> 2.4)
                tl.to({}, {
                    duration: 2,
                    onUpdate: function() {
                        const progress = this.progress();
                        const len = Math.floor(bioMessage.length * progress);
                        if (typedTextEl) typedTextEl.innerText = bioMessage.substring(0, len);
                    }
                }, 0.4);

                // 4. Saída Balanceada (Inicia logo após o texto estar completo)
                tl.to([words, photo, consoleEl], {
                    opacity: 0,
                    y: "-30vh",
                    stagger: 0.02,
                    ease: "power2.inOut",
                    duration: 0.8
                }, 2.5);

                // 5. Buffer de silêncio equilibrado
                tl.to({}, { duration: 2.0 }, 3.3);

                // Animação do card removida temporariamente para garantir visibilidade
                initHTBCharts();
            });

            window.addEventListener('mousemove', (e) => {
                if (heroTitle && window.innerWidth > 768) {
                    const moveX = (e.clientX - window.innerWidth / 2) / 30;
                    const moveY = (e.clientY - window.innerHeight / 2) / 30;
                    gsap.to(heroTitle, { x: moveX, y: moveY, duration: 1 });
                }
            });

            document.querySelectorAll('.sticky-bar').forEach((el, index) => {
                const bar = el as HTMLElement;
                const section = bar.closest('section');
                const targetId = bar.getAttribute('data-target');
                const barHeight = 50; // Alinhado com o CSS
                const offsetTop = index * barHeight;

                if (section) {
                    ScrollTrigger.create({
                        trigger: section,
                        start: `bottom ${offsetTop + barHeight}px`,
                        onEnter: () => {
                            bar.classList.add('is-locked');
                            bar.style.top = `${offsetTop}px`;
                        },
                        onLeaveBack: () => {
                            bar.classList.remove('is-locked');
                            bar.style.top = `auto`;
                        }
                    });
                }

                bar.addEventListener('click', () => {
                    if (targetId && (window as any).lenis) (window as any).lenis.scrollTo(targetId, { duration: 1.2 });
                });
            });

            // Ocultar scroll indicator ao fazer scroll
            window.addEventListener('scroll', () => {
                const scrollIndicator = document.getElementById('scroll-indicator');
                if (scrollIndicator) {
                    if (window.scrollY > 100) {
                        scrollIndicator.classList.add('hidden');
                    } else {
                        scrollIndicator.classList.remove('hidden');
                    }
                }
            }, { passive: true });
        </script>
    </body>
