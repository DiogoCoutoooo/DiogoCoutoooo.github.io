// Helper: parse YAML frontmatter from a markdown string
function parseFrontmatter(text: string): Record<string, string> {
    const match = text.match(/^---\n([\s\S]*?)\n---/);
    if (!match) return {};
    const result: Record<string, string> = {};
    match[1].split('\n').forEach(line => {
        const idx = line.indexOf(':');
        if (idx === -1) return;
        const key = line.slice(0, idx).trim();
        const value = line.slice(idx + 1).trim();
        result[key] = value;
    });
    return result;
}

// Função para transformar notas do Obsidian em dados para o Portfólio
async function getLatestMachineFromGitHub() {
    try {
        const repoUrl = "https://api.github.com/repos/DiogoCoutoooo/Cybersec-Obsidian/contents/Tought%20Process/Easy";
        const response = await fetch(repoUrl);
        const files = await response.json();
        
        const mdFiles = files.filter((f: { name: string; }) => f.name.endsWith('.md') && f.name !== 'README.md');
        
        // Fetch todos os ficheiros e parsear o frontmatter para obter a data de pwn
        const machines = await Promise.all(
            mdFiles.map(async (file: { name: string; download_url: string }) => {
                const contentRes = await fetch(file.download_url);
                const text = await contentRes.text();
                const fm = parseFrontmatter(text);
                return { file, text, fm };
            })
        );

        // Ordenar pelo pwn_date e pegar na mais recente
        machines.sort((a, b) => {
            const dateA = new Date(a.fm.pwn_date || '2000-01-01').getTime();
            const dateB = new Date(b.fm.pwn_date || '2000-01-01').getTime();
            return dateB - dateA;
        });

        const { fm, file } = machines[0];
        const title = fm.name || file.name.replace('.md', '');

        // Matrix a partir dos campos individuais
        const matrix = {
            ENUM:   parseInt(fm.matrix_enum   || '85') * 10,
            REAL:   parseInt(fm.matrix_real   || '75') * 10,
            CVE:    parseInt(fm.matrix_cve    || '20') * 10,
            CUSTOM: parseInt(fm.matrix_custom || '70') * 10,
            CTF:    parseInt(fm.matrix_ctf    || '65') * 10,
        };

        // Tentar encontrar o logo na pasta !Media
        const avatarUrl = `https://raw.githubusercontent.com/DiogoCoutoooo/Cybersec-Obsidian/main/Tought%20Process/!Media/!Logo_${title}.png`;

        return [{
            id: title.toLowerCase(),
            data: {
                title: title,
                os: fm.os || 'Linux',
                difficulty: fm.difficulty || 'Easy',
                pwnedDate: fm.pwn_date || '2026-02-18',
                avatar: avatarUrl,
                matrix: matrix,
                description: fm.summary || 'Descobre os passos e a lógica que utilizei para dominar esta máquina.',
            }
        }];
    } catch (e) {
        console.error("Erro ao ir buscar dados ao GitHub:", e);
        return [];
    }
}

const displayMachines = await getLatestMachineFromGitHub();

const getMachineImage = (title: string, avatar: string) => avatar;
