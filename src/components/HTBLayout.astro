---
interface Props {
	title: string;
	os: string;
	difficulty: string;
	pwnedDate: string;
	avatar: string;
}

const { title, os, difficulty, pwnedDate, avatar } = Astro.props;
import GlobalEffects from './GlobalEffects.astro';
---

<html lang="pt">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title} | HTB Pwned</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Syne:wght@800&display=swap');

			body {
				margin: 0;
				background-color: #050505;
				color: #fff;
				font-family: 'JetBrains Mono', monospace;
				line-height: 1.6;
				overflow-x: hidden;
                cursor: none;
			}

			/* Noise overlay agora no GlobalEffects.astro */

			.container {
				max-width: 900px;
				margin: 0 auto;
				padding: 100px 20px;
			}

			.back-link {
				color: #9acd32;
				text-decoration: none;
				font-size: 0.8rem;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				margin-bottom: 40px;
				display: inline-block;
				transition: all 0.3s;
			}

			.back-link:hover {
				opacity: 0.7;
				transform: translateX(-5px);
			}

			.machine-header {
				display: flex;
				align-items: center;
				gap: 30px;
				margin-bottom: 60px;
				background: rgba(255, 255, 255, 0.02);
				padding: 40px;
				border: 1px solid rgba(255, 255, 255, 0.05);
				border-radius: 4px;
                position: relative;
                overflow: hidden;
			}
            
            .machine-header::before {
                content: "";
                position: absolute;
                top: 0; left: 0; width: 4px; height: 100%;
                background: #9acd32;
            }

			.avatar {
				width: 100px;
				height: 100px;
				border-radius: 50%;
				border: 2px solid #9acd32;
				padding: 4px;
			}

			h1 {
				font-family: 'Syne', sans-serif;
				font-size: 3.5rem;
				margin: 0;
				line-height: 1;
				text-transform: uppercase;
			}

			.meta-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 20px;
				margin-top: 20px;
				font-size: 0.7rem;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				opacity: 0.6;
			}

			.meta-item b {
				color: #9acd32;
				display: block;
				margin-bottom: 4px;
			}

			/* Markdown Styling */
			article {
				font-size: 1rem;
				line-height: 1.8;
			}

			article h2 {
				font-family: 'Syne', sans-serif;
				font-size: 1.8rem;
				margin: 50px 0 20px;
				color: #fff;
				text-transform: uppercase;
				border-bottom: 1px solid rgba(255, 255, 255, 0.1);
				padding-bottom: 10px;
			}

			article p { margin-bottom: 25px; opacity: 0.8; }

			article pre {
				background: #0f0f0f !important;
				padding: 20px;
				border-radius: 4px;
				border: 1px solid rgba(255, 255, 255, 0.05);
				margin: 30px 0;
				overflow-x: auto;
			}

			article code {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.9rem;
				color: #9acd32;
			}

            article pre code {
                color: #fff;
            }

			article img {
				max-width: 100%;
				border-radius: 4px;
				margin: 40px 0;
				border: 1px solid rgba(255, 255, 255, 0.1);
			}

			.status-badge {
				background: #9acd32;
				color: #000;
				padding: 2px 8px;
				font-size: 0.6rem;
				font-weight: 800;
				border-radius: 2px;
				vertical-align: middle;
				margin-left: 10px;
			}
		</style>
	</head>
	<body>
		<GlobalEffects />
		<main class="container">
			<a href="/" class="back-link">‚Üê Terminal_Main</a>
			
			<header class="machine-header">
				<img src={avatar} alt={title} class="avatar" />
				<div>
					<h1>{title} <span class="status-badge">PWNED</span></h1>
					<div class="meta-grid">
						<div class="meta-item"><b>OS</b> {os}</div>
						<div class="meta-item"><b>Difficulty</b> {difficulty}</div>
						<div class="meta-item"><b>Pwned_On</b> {pwnedDate}</div>
					</div>
				</div>
			</header>

			<article>
				<slot />
			</article>
		</main>
	</body>
</html>
